  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Animated counters for hero section
      function animateCounter(element, target, duration = 2000) {
        const start = 0;
        const increment = target / (duration / 16);
        let current = start;

        const timer = setInterval(() => {
          current += increment;
          if (current >= target) {
            current = target;
            clearInterval(timer);
          }

          if (target >= 1000000000) {
            element.textContent = (current / 1000000000).toFixed(1) + 'B';
          } else if (target >= 1000000) {
            element.textContent = (current / 1000000).toFixed(1) + 'M';
          } else if (target >= 1000) {
            element.textContent = (current / 1000).toFixed(1) + 'K';
          } else {
            element.textContent = Math.round(current);
          }
        }, 16);
      }

      // Network calculator functionality
      const slider = document.getElementById('networkSlider');
      const networkSize = document.getElementById('networkSize');
      const networkConnections = document.getElementById('networkConnections');
      const networkMultiplier = document.getElementById('networkMultiplier');

      function updateNetworkCalculator() {
        const n = parseInt(slider.value);
        const connections = (n * (n - 1)) / 2;
        const multiplier = connections / n;

        // Format network size
        if (n >= 1000000000) {
          networkSize.textContent = (n / 1000000000).toFixed(1) + 'B';
        } else if (n >= 1000000) {
          networkSize.textContent = (n / 1000000).toFixed(1) + 'M';
        } else if (n >= 1000) {
          networkSize.textContent = (n / 1000).toFixed(0) + 'K';
        }

        // Format connections
        if (connections >= 1000000000000) {
          networkConnections.textContent = (connections / 1000000000000).toFixed(0) + 'T';
        } else if (connections >= 1000000000) {
          networkConnections.textContent = (connections / 1000000000).toFixed(0) + 'B';
        } else if (connections >= 1000000) {
          networkConnections.textContent = (connections / 1000000).toFixed(1) + 'M';
        } else if (connections >= 1000) {
          networkConnections.textContent = (connections / 1000).toFixed(1) + 'K';
        }

        // Format multiplier
        if (multiplier >= 1000000) {
          networkMultiplier.textContent = (multiplier / 1000000).toFixed(1) + 'M√ó';
        } else if (multiplier >= 1000) {
          networkMultiplier.textContent = (multiplier / 1000).toFixed(0) + 'K√ó';
        } else {
          networkMultiplier.textContent = Math.round(multiplier) + '√ó';
        }
      }

      slider.addEventListener('input', updateNetworkCalculator);
      updateNetworkCalculator(); // Initial calculation

      // Sidebar dynamic stats
      function updateSidebarStats() {
        const currentYear = new Date().getFullYear();
        const yearsTo2035 = 2035 - currentYear;
        document.getElementById('countdown-years').textContent = yearsTo2035;

        // Note: Progress bar will be updated by fetchAndUpdateDynamicStats()
      }

      // Challenge card hover effects
      function setupChallengeCards() {
        const challengeCards = document.querySelectorAll('.challenge-card');
        challengeCards.forEach(card => {
          card.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-2px)';
          });

          card.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0)';
          });
        });
      }

      // Intersection Observer for animations
      function setupScrollAnimations() {
        const observerOptions = {
          threshold: 0.1,
          rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.style.opacity = '1';
              entry.target.style.transform = 'translateY(0)';

              // Trigger counter animations for hero stats
              if (entry.target.id === 'counter-billion') {
                animateCounter(document.getElementById('counter-billion'), 1000000000, 3000);
              }
              if (entry.target.id === 'counter-connections') {
                animateCounter(document.getElementById('counter-connections'), 500000000000000, 3000);
              }
              if (entry.target.id === 'counter-population') {
                setTimeout(() => {
                  document.getElementById('counter-population').textContent = '12%';
                }, 2000);
              }
            }
          });
        }, observerOptions);

        // Observe hero stats
        const heroStats = document.querySelectorAll('#counter-billion, #counter-connections, #counter-population');
        heroStats.forEach(stat => {
          stat.style.opacity = '0';
          stat.style.transform = 'translateY(20px)';
          stat.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
          observer.observe(stat);
        });

        // Observe timeline items
        const timelineItems = document.querySelectorAll('.relative.flex.items-start');
        timelineItems.forEach((item, index) => {
          item.style.opacity = '0';
          item.style.transform = 'translateX(-50px)';
          item.style.transition = `opacity 0.6s ease ${index * 0.2}s, transform 0.6s ease ${index * 0.2}s`;
          observer.observe(item);
        });
      }

      // Initialize all functionality
      updateSidebarStats();
      setupChallengeCards();
      setupScrollAnimations();

      // Fetch and update real dynamic stats from API
      async function fetchAndUpdateDynamicStats() {
        try {
          const response = await fetch('/api/stats/dashboard');
          const result = await response.json();

          if (result.success) {
            const data = result.data;

            // Update Current Network
            document.getElementById('current-members').textContent = data.currentNetwork;
            document.getElementById('network-size').textContent = data.currentNetwork;

            // Update Potential Connections (already calculated in backend)
            document.getElementById('current-connections').textContent = data.potentialConnections;

            // Update Active Projects
            document.getElementById('active-projects').textContent = data.activeProjects;

            // Update Team Members
            document.getElementById('team-members').textContent = data.teamMembers;

            // Update Mission Progress
            const progressElement = document.getElementById('mission-progress');
            const progressPercent = data.progressPercent;
            progressElement.textContent = data.progressPercentFormatted + '%';

            // Update Years to 2035
            document.getElementById('countdown-years').textContent = data.yearsTo2035;

            // Update progress bar
            const progressBar = document.getElementById('progress-bar');
            // Convert very small percentages to at least 0.1% for visibility
            const progressBarPercent = Math.max(0.1, progressPercent);
            progressBar.style.width = progressBarPercent + '%';

            console.log('‚úÖ Dynamic stats updated successfully');
            console.log('üìä Progress data:', {
              progressPercent: progressPercent,
              progressBarPercent: progressBarPercent,
              progressBarWidth: progressBar.style.width
            });
          } else {
            console.error('‚ùå Failed to fetch dynamic stats:', result.error);
            // Fallback to static values if API fails
            updateFallbackStats();
          }
        } catch (error) {
          console.error('‚ùå Error fetching dynamic stats:', error);
          // Fallback to static values if API fails
          updateFallbackStats();
        }
      }

      // Fallback function for when API is not available
      function updateFallbackStats() {
        console.log('üìä Using fallback static stats');
        // Keep existing static values as fallback
        const currentMembers = 3;
        const potentialConnections = (currentMembers * (currentMembers - 1)) / 2;

        document.getElementById('current-connections').textContent = potentialConnections;

        const goalMembers = 1000000000;
        const progressPercent = (currentMembers / goalMembers) * 100;
        const progressElement = document.getElementById('mission-progress');
        progressElement.textContent = progressPercent.toFixed(6) + '%';

        const progressBar = document.getElementById('progress-bar');
        progressBar.style.width = Math.max(0.1, progressPercent) + '%';
      }

      // Fetch dynamic stats on page load
      fetchAndUpdateDynamicStats();
