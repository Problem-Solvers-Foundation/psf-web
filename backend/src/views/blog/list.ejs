<div class="mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8">

  <!-- Cabeçalho da página -->
  <div class="text-center mb-16">
    <h1 class="text-5xl font-black tracking-tight text-text-light dark:text-text-dark sm:text-6xl md:text-7xl mb-6">
      Blog
    </h1>
    <p class="mt-2 max-w-3xl mx-auto text-xl text-muted-light dark:text-muted-dark leading-relaxed font-medium">
      Insights, stories, and updates from the Problem Solver Foundation
    </p>
  </div>

  <!-- Grid de posts -->
  <% if (posts && posts.length > 0) { %>
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">

      <% posts.forEach(post => { %>
        <article class="group rounded-lg border border-border-light dark:border-border-dark bg-surface-light dark:bg-surface-dark overflow-hidden shadow-sm transition-all hover:shadow-lg">

          <!-- Imagem -->
          <% if (post.imageUrl) { %>
            <a href="/blog/<%= post.slug %>" class="block">
              <div class="aspect-video w-full overflow-hidden">
                <img
                  src="<%= post.imageUrl %>"
                  alt="<%= post.title %>"
                  class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
                  onerror="this.src='https://via.placeholder.com/400x225?text=Blog+Post'"
                />
              </div>
            </a>
          <% } %>

          <!-- Conteúdo -->
          <div class="p-6">

            <!-- Categoria -->
            <% if (post.category) { %>
              <span class="inline-block rounded-full bg-primary px-3 py-1.5 text-xs font-bold text-white uppercase tracking-wide shadow-sm">
                <%= post.category %>
              </span>
            <% } %>

            <!-- Título -->
            <h2 class="mt-4 text-2xl font-bold text-text-light dark:text-text-dark group-hover:text-primary transition-colors leading-tight">
              <a href="/blog/<%= post.slug %>">
                <%= post.title %>
              </a>
            </h2>

            <!-- Excerpt -->
            <% if (post.excerpt) { %>
              <p class="mt-3 text-base text-muted-light dark:text-muted-dark line-clamp-3 leading-relaxed">
                <%= post.excerpt %>
              </p>
            <% } %>

            <!-- Meta informações -->
            <div class="mt-5 pt-4 border-t border-border-light dark:border-border-dark flex items-center justify-between">
              <div class="flex items-center gap-3">
                <!-- Avatar pequeno -->
                <% if (post.author) { %>
                  <div class="h-8 w-8 rounded-full bg-primary/20 flex items-center justify-center ring-1 ring-primary/30">
                    <span class="text-primary font-bold text-xs">
                      <%= post.author.charAt(0).toUpperCase() %>
                    </span>
                  </div>
                <% } %>

                <div class="flex flex-col">
                  <!-- Autor -->
                  <% if (post.author) { %>
                    <span class="text-sm font-semibold text-text-light dark:text-text-dark"><%= post.author %></span>
                  <% } %>
                  <!-- Data -->
                  <time datetime="<%= post.createdAt %>" class="text-xs text-muted-light dark:text-muted-dark">
                    <%
                      const date = new Date(post.createdAt);
                      const formattedDate = date.toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric'
                      });
                    %>
                    <%= formattedDate %>
                  </time>
                </div>
              </div>

              <!-- Link "Read more" -->
              <a
                href="/blog/<%= post.slug %>"
                class="inline-flex items-center px-4 py-2 rounded-lg bg-primary/10 text-primary text-sm font-bold hover:bg-primary hover:text-white transition-all"
              >
                Read
                <svg class="ml-1.5 h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>

          </div>
        </article>
      <% }); %>

    </div>
  <% } else { %>
    <!-- Mensagem quando não há posts -->
    <div class="rounded-lg bg-gray-50 dark:bg-gray-900/20 p-12 text-center">
      <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
      </svg>
      <h3 class="mt-4 text-lg font-medium text-gray-900 dark:text-white">No blog posts yet</h3>
      <p class="mt-2 text-gray-500 dark:text-gray-400">
        Check back soon for new content!
      </p>
    </div>
  <% } %>

</div>
