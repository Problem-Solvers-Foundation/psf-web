<style>
  /* Mobile-responsive table styles - Convert tables to vertical cards on mobile */
  @media (max-width: 768px) {
    /* Remove horizontal scroll wrapper */
    .responsive-table {
      display: block;
      width: 100%;
      overflow-x: visible !important;
    }

    /* Force table to full width, no min-width */
    .responsive-table table {
      width: 100%;
      min-width: 0 !important;
    }

    /* Convert table rows to cards */
    .mobile-cards {
      display: block;
      border: none !important;
    }

    .mobile-cards thead {
      display: none !important;
    }

    .mobile-cards tbody {
      display: block;
    }

    .mobile-cards tbody tr {
      display: block;
      margin-bottom: 1rem;
      border: 1px solid #e5e7eb;
      border-radius: 0.5rem;
      background: white;
      box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
      page-break-inside: avoid;
    }

    .mobile-cards tbody td {
      display: flex !important;
      justify-content: space-between;
      align-items: center;
      padding: 0.75rem 1rem !important;
      border: none !important;
      border-bottom: 1px solid #f3f4f6 !important;
      text-align: left !important;
    }

    .mobile-cards tbody td:last-child {
      border-bottom: none !important;
    }

    /* Add labels before each cell */
    .mobile-cards tbody td::before {
      content: attr(data-label);
      font-weight: 600;
      color: #6b7280;
      margin-right: 1rem;
      min-width: 100px;
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    /* Actions column - wrap buttons vertically */
    .mobile-cards tbody td:last-child {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .mobile-cards tbody td:last-child::before {
      margin-bottom: 0.25rem;
    }

    .mobile-cards tbody td:last-child > * {
      display: inline-block;
      margin: 0.125rem 0.25rem;
    }

    /* Ensure no elements cause horizontal overflow */
    .mobile-cards tbody td * {
      max-width: 100%;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }
  }
</style>
