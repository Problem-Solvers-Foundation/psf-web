<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Solutions - PSF Community</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: "#117dd4"
          }
        }
      }
    };
  </script>
  <%- include('../partials/admin-styles') %>
</head>
<body class="bg-gray-50">
  <% const currentPage = 'community-solutions'; %>

  <%- include('../partials/admin-mobile-header') %>
  <%- include('../partials/community-sidebar') %>

  <!-- Main Content -->
  <div class="lg:ml-64 min-h-screen pt-14 lg:pt-0">
    <!-- Top Bar -->
    <header class="bg-white border-b border-gray-200 sticky top-14 lg:top-0 z-10">
      <div class="px-4 sm:px-6 lg:px-8 py-4">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-2xl font-bold text-gray-900">Solutions Hub</h2>
            <p class="text-sm text-gray-600 mt-1">Join existing projects or propose new solutions</p>
          </div>
        </div>
      </div>
    </header>

    <!-- Page Content -->
    <main class="p-4 sm:p-6 lg:p-8">
      <!-- Success/Error Messages -->
      <% if (success) { %>
        <div class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg">
          <%= success %>
        </div>
      <% } %>

      <% if (error) { %>
        <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
          <%= error %>
        </div>
      <% } %>

      <!-- Section 1: Join Existing Projects -->
      <div class="mb-12">
        <div class="mb-6">
          <h3 class="text-xl font-bold text-gray-900 mb-2">Join Existing Projects</h3>
          <p class="text-gray-600">Express your interest in participating in ongoing projects</p>
        </div>

        <% if (projects.length === 0) { %>
          <div class="text-center py-12 bg-white rounded-lg shadow">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
            </svg>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">No projects available</h3>
            <p class="text-gray-600">Check back later for new projects to join!</p>
          </div>
        <% } else { %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% projects.forEach(project => { %>
              <div class="bg-white rounded-lg shadow hover:shadow-lg transition-shadow p-6">
                <!-- Project Image -->
                <% if (project.imageUrl) { %>
                  <div class="mb-4">
                    <img src="<%= project.imageUrl %>" alt="<%= project.title %>" class="w-full h-48 object-cover rounded-lg">
                  </div>
                <% } %>

                <!-- Project Info -->
                <div class="mb-4">
                  <div class="flex items-start justify-between mb-2">
                    <h4 class="text-lg font-semibold text-gray-900 line-clamp-2"><%= project.title %></h4>
                    <% if (project.status === 'active') { %>
                      <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Active</span>
                    <% } else if (project.status === 'completed') { %>
                      <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">Completed</span>
                    <% } else { %>
                      <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">Planned</span>
                    <% } %>
                  </div>

                  <p class="text-sm text-gray-600 mb-3 line-clamp-3"><%= project.description %></p>

                  <!-- Category -->
                  <div class="flex items-center gap-2 text-sm text-gray-500 mb-3">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                    </svg>
                    <span><%= project.category %></span>
                  </div>

                  <!-- Progress -->
                  <div class="mb-3">
                    <div class="flex justify-between text-sm text-gray-600 mb-1">
                      <span>Progress</span>
                      <span><%= project.progress || 0 %>%</span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-2">
                      <div class="bg-primary h-2 rounded-full" style="width: <%= project.progress || 0 %>%"></div>
                    </div>
                  </div>

                  <!-- Metrics -->
                  <% if (project.metrics) { %>
                    <div class="flex justify-between text-xs text-gray-500 mb-4">
                      <span><%= project.metrics.livesImpacted || 0 %> lives impacted</span>
                      <span><%= project.metrics.volunteersInvolved || 0 %> volunteers</span>
                    </div>
                  <% } %>
                </div>

                <!-- Action Button -->
                <div class="pt-4 border-t border-gray-200">
                  <% if (project.status === 'active') { %>
                    <button
                      id="join-btn-<%= project.id %>"
                      onclick="showJoinProjectModal('<%= project.id %>', '<%= project.title.replace(/'/g, "\\'") %>')"
                      class="w-full px-4 py-2 bg-primary text-white rounded-lg font-medium hover:bg-primary/90 transition-colors"
                    >
                      Express Interest to Join
                    </button>
                  <% } else { %>
                    <button disabled class="w-full px-4 py-2 bg-gray-300 text-gray-500 rounded-lg font-medium cursor-not-allowed">
                      Not Currently Recruiting
                    </button>
                  <% } %>
                </div>
              </div>
            <% }); %>
          </div>
        <% } %>
      </div>

      <!-- Section 2: Propose Solutions for Problems -->
      <div>
        <div class="mb-6">
          <h3 class="text-xl font-bold text-gray-900 mb-2">Propose Solutions</h3>
          <p class="text-gray-600">Suggest new project ideas to solve approved problems</p>
        </div>

        <% if (approvedProblems.length === 0) { %>
          <div class="text-center py-12 bg-white rounded-lg shadow">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0112 15c-2.34 0-4.47-.881-6.08-2.33"/>
            </svg>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">No approved problems available</h3>
            <p class="text-gray-600">Check back later for problems that need solutions!</p>
          </div>
        <% } else { %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% approvedProblems.forEach(problem => { %>
              <div class="bg-white rounded-lg shadow hover:shadow-lg transition-shadow p-6">
                <!-- Problem Info -->
                <div class="mb-4">
                  <div class="flex items-start justify-between mb-2">
                    <h4 class="text-lg font-semibold text-gray-900 line-clamp-2"><%= problem.title %></h4>
                    <div class="flex items-center gap-1 text-xs text-gray-500">
                      <% if (problem.urgency === 'critical') { %>
                        <div class="w-2 h-2 bg-red-500 rounded-full"></div>
                        <span>Critical</span>
                      <% } else if (problem.urgency === 'high') { %>
                        <div class="w-2 h-2 bg-orange-500 rounded-full"></div>
                        <span>High</span>
                      <% } else if (problem.urgency === 'medium') { %>
                        <div class="w-2 h-2 bg-yellow-500 rounded-full"></div>
                        <span>Medium</span>
                      <% } else { %>
                        <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                        <span>Low</span>
                      <% } %>
                    </div>
                  </div>

                  <p class="text-sm text-gray-600 mb-3 line-clamp-3"><%= problem.description %></p>

                  <!-- Location -->
                  <div class="flex items-center gap-2 text-sm text-gray-500 mb-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                    <span>
                      <% if (typeof problem.location === 'object' && problem.location) { %>
                        <%= problem.location.city %><% if (problem.location.state) { %>, <%= problem.location.state %><% } %>, <%= problem.location.country %>
                      <% } else { %>
                        <%= problem.location %>
                      <% } %>
                    </span>
                  </div>

                  <!-- Knowledge Field -->
                  <div class="flex items-center gap-2 text-sm text-gray-500 mb-4">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                    </svg>
                    <span><%= problem.knowledgeField %></span>
                  </div>

                  <!-- Submitted by -->
                  <div class="text-xs text-gray-500">
                    Submitted by <%= problem.submittedByName %> â€¢ <%= problem.submittedAt.toLocaleDateString() %>
                  </div>
                </div>

                <!-- Action Button -->
                <div class="pt-4 border-t border-gray-200">
                  <button onclick="showProposeSolutionModal('<%= problem.id %>', '<%= problem.title.replace(/'/g, "\\'") %>')" class="w-full px-4 py-2 bg-orange-600 text-white rounded-lg font-medium hover:bg-orange-700 transition-colors">
                    Propose Solution
                  </button>
                </div>
              </div>
            <% }); %>
          </div>
        <% } %>
      </div>
    </main>
  </div>

  <!-- Join Project Modal -->
  <div id="joinProjectModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="bg-white rounded-lg shadow-xl w-full max-w-md">
        <div class="p-6">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-lg font-bold text-gray-900">Join Project Team</h3>
            <button onclick="hideJoinProjectModal()" class="text-gray-400 hover:text-gray-600">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>

          <form id="joinProjectForm" action="/admin/community-dashboard/join-project" method="POST">
            <input type="hidden" id="joinProjectId" name="projectId" value="">

            <div class="mb-4">
              <p class="text-gray-600 mb-4">You're expressing interest to join: <strong id="joinProjectTitle"></strong></p>

              <label for="joinMessage" class="block text-sm font-medium text-gray-700 mb-2">
                Why do you want to join this project? <span class="text-red-500">*</span>
              </label>
              <textarea
                id="joinMessage"
                name="message"
                required
                minlength="20"
                maxlength="500"
                rows="4"
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
                placeholder="Describe your skills, experience, and motivation to join this project..."
              ></textarea>
              <p class="mt-1 text-sm text-gray-500">
                <span id="joinCounter">0</span>/500 characters
              </p>
            </div>

            <div class="flex items-center justify-end gap-3">
              <button
                type="button"
                onclick="hideJoinProjectModal()"
                class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors"
              >
                Cancel
              </button>
              <button
                type="submit"
                id="joinSubmitBtn"
                class="px-6 py-2 text-sm font-medium text-white bg-primary rounded-lg hover:bg-primary/90 transition-colors"
              >
                Express Interest
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Propose Solution Modal -->
  <div id="proposeSolutionModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="bg-white rounded-lg shadow-xl w-full max-w-2xl max-h-[90vh] overflow-y-auto">
        <div class="p-6">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-lg font-bold text-gray-900">Propose Solution</h3>
            <button onclick="hideProposeSolutionModal()" class="text-gray-400 hover:text-gray-600">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>

          <form id="proposeSolutionForm" action="/admin/community-dashboard/propose-solution" method="POST">
            <input type="hidden" id="proposeProblemId" name="problemId" value="">

            <div class="mb-4">
              <p class="text-gray-600 mb-4">Proposing a solution for: <strong id="proposeProblemTitle"></strong></p>
            </div>

            <div class="space-y-4">
              <!-- Solution Title -->
              <div>
                <label for="solutionTitle" class="block text-sm font-medium text-gray-700 mb-2">
                  Solution Title <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="solutionTitle"
                  name="title"
                  required
                  minlength="5"
                  maxlength="200"
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
                  placeholder="Brief title for your proposed solution"
                >
              </div>

              <!-- Solution Description -->
              <div>
                <label for="solutionDescription" class="block text-sm font-medium text-gray-700 mb-2">
                  Solution Description <span class="text-red-500">*</span>
                </label>
                <textarea
                  id="solutionDescription"
                  name="description"
                  required
                  minlength="50"
                  maxlength="2000"
                  rows="6"
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
                  placeholder="Describe your proposed solution in detail. How would you solve this problem? What resources would be needed?"
                ></textarea>
                <p class="mt-1 text-sm text-gray-500">
                  <span id="solutionCounter">0</span>/2000 characters
                </p>
              </div>

              <!-- Implementation Timeline -->
              <div>
                <label for="timeline" class="block text-sm font-medium text-gray-700 mb-2">
                  Estimated Timeline
                </label>
                <select
                  id="timeline"
                  name="timeline"
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
                >
                  <option value="1-3 months">1-3 months</option>
                  <option value="3-6 months" selected>3-6 months</option>
                  <option value="6-12 months">6-12 months</option>
                  <option value="12+ months">12+ months</option>
                </select>
              </div>

              <!-- Required Skills -->
              <div>
                <label for="requiredSkills" class="block text-sm font-medium text-gray-700 mb-2">
                  Required Skills/Expertise
                </label>
                <textarea
                  id="requiredSkills"
                  name="requiredSkills"
                  maxlength="500"
                  rows="3"
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
                  placeholder="What skills or expertise would be needed for this solution?"
                ></textarea>
              </div>
            </div>

            <div class="flex items-center justify-end gap-3 mt-6 pt-6 border-t border-gray-200">
              <button
                type="button"
                onclick="hideProposeSolutionModal()"
                class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors"
              >
                Cancel
              </button>
              <button
                type="submit"
                class="px-6 py-2 text-sm font-medium text-white bg-orange-600 rounded-lg hover:bg-orange-700 transition-colors"
              >
                Propose Solution
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Join Project Modal Functions
    function showJoinProjectModal(projectId, projectTitle) {
      document.getElementById('joinProjectId').value = projectId;
      document.getElementById('joinProjectTitle').textContent = projectTitle;
      document.getElementById('joinProjectModal').classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }

    function hideJoinProjectModal() {
      document.getElementById('joinProjectModal').classList.add('hidden');
      document.body.style.overflow = '';
      document.getElementById('joinProjectForm').reset();

      // Re-enable submit button
      const submitBtn = document.getElementById('joinSubmitBtn');
      submitBtn.disabled = false;
      submitBtn.textContent = 'Express Interest';
    }

    // Propose Solution Modal Functions
    function showProposeSolutionModal(problemId, problemTitle) {
      document.getElementById('proposeProblemId').value = problemId;
      document.getElementById('proposeProblemTitle').textContent = problemTitle;
      document.getElementById('proposeSolutionModal').classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }

    function hideProposeSolutionModal() {
      document.getElementById('proposeSolutionModal').classList.add('hidden');
      document.body.style.overflow = '';
      document.getElementById('proposeSolutionForm').reset();
    }

    // Character counters
    document.addEventListener('DOMContentLoaded', function() {
      // Join message counter
      const joinTextarea = document.getElementById('joinMessage');
      const joinCounter = document.getElementById('joinCounter');

      function updateJoinCounter() {
        const length = joinTextarea.value.length;
        joinCounter.textContent = length;
        joinCounter.style.color = length > 450 ? '#dc2626' : '#6b7280';
      }

      joinTextarea.addEventListener('input', updateJoinCounter);

      // Solution description counter
      const solutionTextarea = document.getElementById('solutionDescription');
      const solutionCounter = document.getElementById('solutionCounter');

      function updateSolutionCounter() {
        const length = solutionTextarea.value.length;
        solutionCounter.textContent = length;

        if (length > 1800) {
          solutionCounter.style.color = '#dc2626'; // red
        } else if (length > 1600) {
          solutionCounter.style.color = '#ea580c'; // orange
        } else {
          solutionCounter.style.color = '#6b7280'; // gray
        }
      }

      solutionTextarea.addEventListener('input', updateSolutionCounter);

      // Prevent double submission for join project form
      const joinForm = document.getElementById('joinProjectForm');
      let isSubmitting = false;

      joinForm.addEventListener('submit', function(e) {
        if (isSubmitting) {
          e.preventDefault();
          return false;
        }

        isSubmitting = true;
        const submitBtn = document.getElementById('joinSubmitBtn');
        submitBtn.disabled = true;
        submitBtn.textContent = 'Submitting...';

        // Reset after a timeout as backup
        setTimeout(() => {
          isSubmitting = false;
          submitBtn.disabled = false;
          submitBtn.textContent = 'Express Interest';
        }, 5000);
      });
    });
  </script>

  <%- include('../partials/admin-scripts') %>
</body>
</html>