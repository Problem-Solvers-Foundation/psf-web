<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Community - PSF</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: "#117dd4"
          }
        }
      }
    };
  </script>
  <%- include('../partials/admin-styles') %>
</head>
<body class="bg-gray-50">
  <% const currentPage = 'community'; %>

  <%- include('../partials/admin-mobile-header') %>
  <%- include('../partials/community-sidebar') %>

  <!-- Main Content -->
  <div class="lg:ml-64 min-h-screen pt-14 lg:pt-0">
    <!-- Top Bar -->
    <div class="bg-white border-b border-gray-200 px-6 py-4 sticky top-14 lg:top-0 z-10">
      <div class="flex items-center justify-between">
        <div>
          <h2 class="text-2xl font-bold text-gray-900">Community</h2>
          <p class="text-sm text-gray-600">Connect with fellow problem solvers and join discussions</p>
        </div>
        <div class="text-sm text-gray-500">
          <%= totalUsers %> community members
        </div>
      </div>
    </div>

    <!-- Page Content -->
    <div class="p-6">
      <!-- Success/Error Messages -->
      <% if (success) { %>
        <div class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg">
          <%= success %>
        </div>
      <% } %>

      <% if (error) { %>
        <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
          <%= error %>
        </div>
      <% } %>

      <!-- Search and Filters -->
      <div class="bg-white rounded-lg shadow p-6 mb-6">
        <div class="flex flex-col lg:flex-row gap-4">
          <div class="flex-1">
            <label for="search" class="block text-sm font-medium text-gray-700 mb-2">Search Members</label>
            <input
              type="text"
              id="search"
              name="search"
              value="<%= search %>"
              placeholder="Search by name..."
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
            >
          </div>
          <div class="flex-1">
            <label for="location" class="block text-sm font-medium text-gray-700 mb-2">Filter by Location</label>
            <input
              type="text"
              id="location"
              name="location"
              value="<%= location %>"
              placeholder="Filter by country, state, or city..."
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
            >
          </div>
          <div class="flex items-end">
            <button
              type="button"
              id="searchBtn"
              class="px-6 py-2 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors"
            >
              Search
            </button>
          </div>
          <% if (search || location) { %>
            <div class="flex items-end">
              <a
                href="/admin/community-dashboard/community"
                class="px-6 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600 transition-colors"
              >
                Clear
              </a>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Tabs -->
      <div class="bg-white rounded-lg shadow mb-6">
        <div class="border-b border-gray-200">
          <nav class="flex space-x-8 px-6">
            <button
              class="py-4 px-1 border-b-2 font-medium text-sm tab-button active"
              data-tab="members"
            >
              <span class="flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
                Members (<%= totalUsers %>)
              </span>
            </button>
            <button
              class="py-4 px-1 border-b-2 font-medium text-sm tab-button"
              data-tab="forums"
            >
              <span class="flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                </svg>
                Discussion Forums
              </span>
            </button>
          </nav>
        </div>
      </div>

      <!-- Members Tab Content -->
      <div id="members-tab" class="tab-content">
        <% if (users.length === 0) { %>
          <div class="bg-white rounded-lg shadow p-8 text-center">
            <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No members found</h3>
            <p class="text-gray-600">
              <% if (search || location) { %>
                No members match your search criteria. Try adjusting your filters.
              <% } else { %>
                No community members available at the moment.
              <% } %>
            </p>
          </div>
        <% } else { %>
          <!-- Members Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
            <% users.forEach(function(member) { %>
              <div class="bg-white rounded-lg shadow hover:shadow-md transition-shadow cursor-pointer member-card" data-member-id="<%= member.id %>">
                <div class="p-6">
                  <!-- Profile Header -->
                  <div class="flex items-center gap-4 mb-4">
                    <div class="w-12 h-12 bg-primary rounded-full flex items-center justify-center flex-shrink-0">
                      <span class="text-white font-semibold text-lg">
                        <%= (member.firstName || member.name || 'U').charAt(0).toUpperCase() %>
                      </span>
                    </div>
                    <div class="flex-1 min-w-0">
                      <h3 class="font-semibold text-gray-900 truncate">
                        <% if (member.firstName && member.lastName) { %>
                          <%= member.firstName %> <%= member.lastName %>
                        <% } else { %>
                          <%= member.name || 'Community Member' %>
                        <% } %>
                      </h3>
                      <p class="text-sm text-gray-600 truncate">
                        <% if (member.country || member.state || member.city) { %>
                          <%= [member.city, member.state, member.country].filter(Boolean).join(', ') %>
                        <% } else { %>
                          Location not specified
                        <% } %>
                      </p>
                    </div>
                  </div>

                  <!-- Introduction -->
                  <% if (member.introduction) { %>
                    <p class="text-sm text-gray-700 mb-4 line-clamp-3">
                      <%= member.introduction.length > 120 ? member.introduction.substring(0, 120) + '...' : member.introduction %>
                    </p>
                  <% } %>

                  <!-- Skills/Interests -->
                  <% if (member.interestedTopics && member.interestedTopics.length > 0) { %>
                    <div class="mb-4">
                      <div class="flex flex-wrap gap-1">
                        <% member.interestedTopics.slice(0, 3).forEach(function(topic) { %>
                          <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-blue-100 text-blue-800">
                            <%= topic %>
                          </span>
                        <% }); %>
                        <% if (member.interestedTopics.length > 3) { %>
                          <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-600">
                            +<%= member.interestedTopics.length - 3 %> more
                          </span>
                        <% } %>
                      </div>
                    </div>
                  <% } %>

                  <!-- Footer -->
                  <div class="flex items-center justify-between text-sm text-gray-500">
                    <div class="flex items-center gap-2">
                      <% if (member.isTechnical) { %>
                        <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-green-100 text-green-800">
                          Technical
                        </span>
                      <% } %>
                      <% if (member.hasProject === 'committed') { %>
                        <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-purple-100 text-purple-800">
                          Has Project
                        </span>
                      <% } %>
                    </div>
                    <span class="text-primary hover:text-primary/80 font-medium">View Profile</span>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>

          <!-- Pagination -->
          <% if (totalPages > 1) { %>
            <div class="mt-8 flex justify-center">
              <nav class="flex items-center gap-2">
                <!-- Previous Button -->
                <% if (currentPage > 1) { %>
                  <a href="?page=<%= currentPage - 1 %><% if (search) { %>&search=<%= encodeURIComponent(search) %><% } %><% if (location) { %>&location=<%= encodeURIComponent(location) %><% } %>"
                     class="px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">
                    Previous
                  </a>
                <% } %>

                <!-- Page Numbers -->
                <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                  <% if (i === currentPage) { %>
                    <span class="px-3 py-2 text-sm font-medium text-white bg-primary border border-primary rounded-lg">
                      <%= i %>
                    </span>
                  <% } else { %>
                    <a href="?page=<%= i %><% if (search) { %>&search=<%= encodeURIComponent(search) %><% } %><% if (location) { %>&location=<%= encodeURIComponent(location) %><% } %>"
                       class="px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">
                      <%= i %>
                    </a>
                  <% } %>
                <% } %>

                <!-- Next Button -->
                <% if (currentPage < totalPages) { %>
                  <a href="?page=<%= currentPage + 1 %><% if (search) { %>&search=<%= encodeURIComponent(search) %><% } %><% if (location) { %>&location=<%= encodeURIComponent(location) %><% } %>"
                     class="px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">
                    Next
                  </a>
                <% } %>
              </nav>
            </div>
          <% } %>
        <% } %>
      </div>

      <!-- Forums Tab Content -->
      <div id="forums-tab" class="tab-content hidden">
        <div class="bg-white rounded-lg shadow p-8 text-center">
          <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
          <h3 class="text-lg font-medium text-gray-900 mb-2">Discussion Forums</h3>
          <p class="text-gray-600 mb-4">
            Discussion forums are coming soon! Connect with fellow problem solvers and share ideas.
          </p>
          <div class="inline-flex items-center px-4 py-2 bg-blue-50 text-blue-800 rounded-lg">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Coming Soon
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- User Profile Modal -->
  <div id="userModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full max-h-screen overflow-y-auto">
        <div id="modalContent">
          <!-- Modal content will be loaded here -->
        </div>
      </div>
    </div>
  </div>

  <script>
    // Tab switching
    document.querySelectorAll('.tab-button').forEach(button => {
      button.addEventListener('click', () => {
        const tabName = button.dataset.tab;

        // Update tab buttons
        document.querySelectorAll('.tab-button').forEach(btn => {
          btn.classList.remove('active', 'border-primary', 'text-primary');
          btn.classList.add('border-transparent', 'text-gray-500');
        });
        button.classList.add('active', 'border-primary', 'text-primary');
        button.classList.remove('border-transparent', 'text-gray-500');

        // Update tab content
        document.querySelectorAll('.tab-content').forEach(content => {
          content.classList.add('hidden');
        });
        document.getElementById(tabName + '-tab').classList.remove('hidden');
      });
    });

    // Search functionality
    document.getElementById('searchBtn').addEventListener('click', () => {
      const search = document.getElementById('search').value;
      const location = document.getElementById('location').value;

      const params = new URLSearchParams();
      if (search) params.append('search', search);
      if (location) params.append('location', location);

      window.location.href = '/admin/community-dashboard/community?' + params.toString();
    });

    // Enter key search
    document.getElementById('search').addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        document.getElementById('searchBtn').click();
      }
    });

    document.getElementById('location').addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        document.getElementById('searchBtn').click();
      }
    });

    // Member card click handlers
    document.querySelectorAll('.member-card').forEach(card => {
      card.addEventListener('click', async () => {
        const memberId = card.dataset.memberId;
        await showUserModal(memberId);
      });
    });

    // Modal functionality
    const modal = document.getElementById('userModal');
    const modalContent = document.getElementById('modalContent');

    async function showUserModal(userId) {
      try {
        // Show loading state
        modalContent.innerHTML = `
          <div class="p-8 text-center">
            <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-primary mx-auto"></div>
            <p class="mt-2 text-gray-600">Loading profile...</p>
          </div>
        `;
        modal.classList.remove('hidden');

        // This would fetch user details via API in a real implementation
        // For now, we'll show a placeholder
        setTimeout(() => {
          const user = <% users.forEach(function(member, index) { %>
            <% if (index === 0) { %>{
              id: '<%= member.id %>',
              name: '<%= (member.firstName && member.lastName) ? member.firstName + " " + member.lastName : (member.name || "Community Member") %>',
              email: '<%= member.email || "" %>',
              location: '<%= [member.city, member.state, member.country].filter(Boolean).join(", ") %>',
              introduction: '<%= (member.introduction || "").replace(/'/g, "\\'") %>',
              accomplishment: '<%= (member.accomplishment || "").replace(/'/g, "\\'") %>',
              education: '<%= (member.education || "").replace(/'/g, "\\'") %>',
              employment: '<%= (member.employmentHistory || "").replace(/'/g, "\\'") %>',
              isTechnical: <%= member.isTechnical || false %>,
              linkedinUrl: '<%= member.linkedinUrl || "" %>',
              twitterUrl: '<%= member.twitterUrl || "" %>',
              instagramUrl: '<%= member.instagramUrl || "" %>',
              interestedTopics: [<% if (member.interestedTopics) { %><% member.interestedTopics.forEach(function(topic, i) { %>'<%= topic %>'<% if (i < member.interestedTopics.length - 1) { %>,<% } %><% }); %><% } %>],
              responsibilityAreas: [<% if (member.responsibilityAreas) { %><% member.responsibilityAreas.forEach(function(area, i) { %>'<%= area %>'<% if (i < member.responsibilityAreas.length - 1) { %>,<% } %><% }); %><% } %>],
              hasProject: '<%= member.hasProject || "" %>',
              projectName: '<%= (member.projectName || "").replace(/'/g, "\\'") %>',
              projectDescription: '<%= (member.projectDescription || "").replace(/'/g, "\\'") %>'
            }<% } %>
          <% }); %>;

          modalContent.innerHTML = generateUserModalContent(user);
        }, 500);

      } catch (error) {
        console.error('Error loading user profile:', error);
        modalContent.innerHTML = `
          <div class="p-8 text-center">
            <div class="text-red-600 mb-2">
              <svg class="w-8 h-8 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="font-medium text-gray-900 mb-2">Error Loading Profile</h3>
            <p class="text-gray-600">Unable to load user profile. Please try again.</p>
            <button onclick="closeModal()" class="mt-4 px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600 transition-colors">
              Close
            </button>
          </div>
        `;
      }
    }

    function generateUserModalContent(user) {
      return `
        <div class="p-6">
          <!-- Modal Header -->
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-xl font-bold text-gray-900">Member Profile</h3>
            <button onclick="closeModal()" class="text-gray-400 hover:text-gray-600">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>

          <!-- Profile Content -->
          <div class="space-y-6">
            <!-- Basic Info -->
            <div class="flex items-center gap-4">
              <div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center flex-shrink-0">
                <span class="text-white font-semibold text-xl">
                  ${user.name.charAt(0).toUpperCase()}
                </span>
              </div>
              <div>
                <h4 class="text-lg font-semibold text-gray-900">${user.name}</h4>
                <p class="text-gray-600">${user.location || 'Location not specified'}</p>
                ${user.isTechnical ? '<span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-green-100 text-green-800 mt-1">Technical Background</span>' : ''}
              </div>
            </div>

            <!-- Social Links -->
            ${(user.linkedinUrl || user.twitterUrl || user.instagramUrl) ? `
              <div>
                <h5 class="font-medium text-gray-900 mb-2">Connect</h5>
                <div class="flex gap-3">
                  ${user.linkedinUrl ? `<a href="${user.linkedinUrl}" target="_blank" class="text-blue-600 hover:text-blue-800">LinkedIn</a>` : ''}
                  ${user.twitterUrl ? `<a href="${user.twitterUrl}" target="_blank" class="text-blue-400 hover:text-blue-600">Twitter</a>` : ''}
                  ${user.instagramUrl ? `<a href="${user.instagramUrl}" target="_blank" class="text-pink-600 hover:text-pink-800">Instagram</a>` : ''}
                </div>
              </div>
            ` : ''}

            <!-- Introduction -->
            ${user.introduction ? `
              <div>
                <h5 class="font-medium text-gray-900 mb-2">About</h5>
                <p class="text-gray-700">${user.introduction}</p>
              </div>
            ` : ''}

            <!-- Accomplishments -->
            ${user.accomplishment ? `
              <div>
                <h5 class="font-medium text-gray-900 mb-2">Key Accomplishment</h5>
                <p class="text-gray-700">${user.accomplishment}</p>
              </div>
            ` : ''}

            <!-- Education -->
            ${user.education ? `
              <div>
                <h5 class="font-medium text-gray-900 mb-2">Education</h5>
                <p class="text-gray-700">${user.education}</p>
              </div>
            ` : ''}

            <!-- Employment -->
            ${user.employment ? `
              <div>
                <h5 class="font-medium text-gray-900 mb-2">Experience</h5>
                <p class="text-gray-700">${user.employment}</p>
              </div>
            ` : ''}

            <!-- Interests -->
            ${user.interestedTopics && user.interestedTopics.length > 0 ? `
              <div>
                <h5 class="font-medium text-gray-900 mb-2">Interested Topics</h5>
                <div class="flex flex-wrap gap-2">
                  ${user.interestedTopics.map(topic => `
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                      ${topic}
                    </span>
                  `).join('')}
                </div>
              </div>
            ` : ''}

            <!-- Responsibility Areas -->
            ${user.responsibilityAreas && user.responsibilityAreas.length > 0 ? `
              <div>
                <h5 class="font-medium text-gray-900 mb-2">Areas of Responsibility</h5>
                <div class="flex flex-wrap gap-2">
                  ${user.responsibilityAreas.map(area => `
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                      ${area}
                    </span>
                  `).join('')}
                </div>
              </div>
            ` : ''}

            <!-- Project Info -->
            ${user.hasProject === 'committed' && user.projectName ? `
              <div>
                <h5 class="font-medium text-gray-900 mb-2">Current Project</h5>
                <div class="bg-purple-50 p-4 rounded-lg">
                  <h6 class="font-medium text-purple-900">${user.projectName}</h6>
                  ${user.projectDescription ? `<p class="text-purple-700 mt-1">${user.projectDescription}</p>` : ''}
                </div>
              </div>
            ` : ''}
          </div>
        </div>
      `;
    }

    function closeModal() {
      modal.classList.add('hidden');
    }

    // Close modal when clicking outside
    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        closeModal();
      }
    });

    // Close modal with Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
        closeModal();
      }
    });

    // Initialize active tab style
    document.querySelector('.tab-button.active').classList.add('border-primary', 'text-primary');
    document.querySelector('.tab-button.active').classList.remove('border-transparent', 'text-gray-500');
  </script>

  <style>
    .line-clamp-3 {
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  </style>

  <%- include('../partials/admin-scripts') %>
</body>
</html>