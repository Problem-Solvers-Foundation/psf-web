  <script>
    // Tab switching
    document.querySelectorAll('.tab-button').forEach(button => {
      button.addEventListener('click', () => {
        const tabName = button.dataset.tab;

        // Update tab buttons
        document.querySelectorAll('.tab-button').forEach(btn => {
          btn.classList.remove('active', 'border-primary', 'text-primary');
          btn.classList.add('border-transparent', 'text-gray-500');
        });
        button.classList.add('active', 'border-primary', 'text-primary');
        button.classList.remove('border-transparent', 'text-gray-500');

        // Update tab content
        document.querySelectorAll('.tab-content').forEach(content => {
          content.classList.add('hidden');
        });
        document.getElementById(tabName + '-tab').classList.remove('hidden');
      });
    });

    // Search functionality
    document.getElementById('searchBtn').addEventListener('click', () => {
      const search = document.getElementById('search').value;
      const location = document.getElementById('location').value;

      const params = new URLSearchParams();
      if (search) params.append('search', search);
      if (location) params.append('location', location);

      window.location.href = '/admin/community-dashboard/community?' + params.toString();
    });

    // Enter key search
    document.getElementById('search').addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        document.getElementById('searchBtn').click();
      }
    });

    document.getElementById('location').addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        document.getElementById('searchBtn').click();
      }
    });

    // Member card click handlers
    document.querySelectorAll('.member-card').forEach(card => {
      card.addEventListener('click', async () => {
        const memberId = card.dataset.memberId;
        await showUserModal(memberId);
      });
    });

    // Modal functionality
    const modal = document.getElementById('userModal');
    const modalContent = document.getElementById('modalContent');

    async function showUserModal(userId) {
      try {
        // Show loading state
        modalContent.innerHTML = `
          <div class="p-8 text-center">
            <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-primary mx-auto"></div>
            <p class="mt-2 text-gray-600">Loading profile...</p>
          </div>
        `;

        const userModal = document.getElementById('userModal');
        const userModalContent = userModal.querySelector('.modal-content');

        userModal.classList.remove('hidden');

        // Add animation
        setTimeout(() => {
          userModalContent.classList.add('show');
        }, 10);

        // Find the user data from the users array
        const usersData = {
          <% users.forEach(function(member, index) { %>
            '<%= member.id %>': {
              id: '<%= member.id %>',
              name: '<%= (member.firstName && member.lastName) ? member.firstName + " " + member.lastName : (member.name || "Community Member") %>',
              firstName: '<%= member.firstName || "" %>',
              lastName: '<%= member.lastName || "" %>',
              email: '<%= member.email || "" %>',
              city: '<%= member.city || "" %>',
              state: '<%= member.state || "" %>',
              country: '<%= member.country || "" %>',
              role: '<%= member.role || "user" %>',
              introduction: '<%= (member.introduction || "").replace(/'/g, "\\'") %>',
              bio: '<%= (member.bio || "").replace(/'/g, "\\'") %>',
              accomplishment: '<%= (member.accomplishment || "").replace(/'/g, "\\'") %>',
              education: '<%= (member.education || "").replace(/'/g, "\\'") %>',
              employmentHistory: '<%= (member.employmentHistory || "").replace(/'/g, "\\'") %>',
              isTechnical: '<%= member.isTechnical || "" %>',
              linkedinUrl: '<%= member.linkedinUrl || "" %>',
              twitterUrl: '<%= member.twitterUrl || "" %>',
              instagramUrl: '<%= member.instagramUrl || "" %>',
              interestedTopics: [<% if (member.interestedTopics && member.interestedTopics.length > 0) { %><% member.interestedTopics.forEach(function(topic, i) { %>'<%= topic %>'<% if (i < member.interestedTopics.length - 1) { %>,<% } %><% }); %><% } %>],
              responsibilityAreas: [<% if (member.responsibilityAreas && member.responsibilityAreas.length > 0) { %><% member.responsibilityAreas.forEach(function(area, i) { %>'<%= area %>'<% if (i < member.responsibilityAreas.length - 1) { %>,<% } %><% }); %><% } %>],
              hasProject: '<%= member.hasProject || "" %>',
              projectName: '<%= (member.projectName || "").replace(/'/g, "\\'") %>',
              projectDescription: '<%= (member.projectDescription || "").replace(/'/g, "\\'") %>',
              createdAt: <% if (member.createdAt) { %>{ seconds: <%= member.createdAt.seconds || 0 %> }<% } else { %>null<% } %>
            }<% if (index < users.length - 1) { %>,<% } %>
          <% }); %>
        };

        setTimeout(() => {
          const user = usersData[userId];
          if (user) {
            modalContent.innerHTML = generateUserModalContent(user);
          } else {
            modalContent.innerHTML = `
              <div class="p-8 text-center">
                <div class="text-red-600 mb-2">
                  <svg class="w-8 h-8 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <h3 class="font-medium text-gray-900 mb-2">User Not Found</h3>
                <p class="text-gray-600">Unable to find user profile data.</p>
                <button onclick="closeModal()" class="mt-4 px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600 transition-colors">
                  Close
                </button>
              </div>
            `;
          }
        }, 300);

      } catch (error) {
        console.error('Error loading user profile:', error);
        modalContent.innerHTML = `
          <div class="p-8 text-center">
            <div class="text-red-600 mb-2">
              <svg class="w-8 h-8 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="font-medium text-gray-900 mb-2">Error Loading Profile</h3>
            <p class="text-gray-600">Unable to load user profile. Please try again.</p>
            <button onclick="closeModal()" class="mt-4 px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600 transition-colors">
              Close
            </button>
          </div>
        `;
      }
    }

    function generateUserModalContent(user) {
      // Create display name
      const displayName = user.firstName && user.lastName
        ? `${user.firstName} ${user.lastName}`
        : user.name || 'Anonymous User';

      // Create location string
      const locationParts = [user.city, user.state, user.country].filter(part => part && part.trim());
      const location = locationParts.length > 0 ? locationParts.join(', ') : 'Location not specified';

      return `
        <div class="p-6">
          <!-- Modal Header -->
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-xl font-bold text-gray-900">Member Profile</h3>
            <button onclick="closeModal()" class="text-gray-400 hover:text-gray-600">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>

          <!-- Profile Content -->
          <div class="space-y-6">
            <!-- Basic Info -->
            <div class="flex items-center gap-4">
              <div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center flex-shrink-0">
                <span class="text-white font-semibold text-xl">
                  ${displayName.charAt(0).toUpperCase()}
                </span>
              </div>
              <div>
                <h4 class="text-lg font-semibold text-gray-900">${displayName}</h4>
                <p class="text-gray-600">${location}</p>
                ${user.role && user.role !== 'user' ? `<span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-blue-100 text-blue-800 mt-1">${user.role.charAt(0).toUpperCase() + user.role.slice(1)}</span>` : ''}
                ${user.isTechnical === 'yes' ? '<span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-green-100 text-green-800 mt-1 ml-2">Technical Background</span>' : ''}
              </div>
            </div>

            <!-- Contact Information -->
            ${user.email ? `
              <div>
                <h5 class="font-medium text-gray-900 mb-2">Contact</h5>
                <p class="text-gray-700">${user.email}</p>
              </div>
            ` : ''}

            <!-- Social Links -->
            ${(user.linkedinUrl || user.twitterUrl || user.instagramUrl) ? `
              <div>
                <h5 class="font-medium text-gray-900 mb-2">Connect</h5>
                <div class="flex gap-3">
                  ${user.linkedinUrl ? `<a href="${user.linkedinUrl}" target="_blank" class="text-blue-600 hover:text-blue-800">LinkedIn</a>` : ''}
                  ${user.twitterUrl ? `<a href="${user.twitterUrl}" target="_blank" class="text-blue-400 hover:text-blue-600">Twitter</a>` : ''}
                  ${user.instagramUrl ? `<a href="${user.instagramUrl}" target="_blank" class="text-pink-600 hover:text-pink-800">Instagram</a>` : ''}
                </div>
              </div>
            ` : ''}

            <!-- Introduction / Bio -->
            ${(user.introduction && user.introduction.trim()) || (user.bio && user.bio.trim()) ? `
              <div>
                <h5 class="font-medium text-gray-900 mb-2">About</h5>
                <p class="text-gray-700">${user.introduction && user.introduction.trim() ? user.introduction : user.bio}</p>
              </div>
            ` : ''}

            <!-- Accomplishments -->
            ${user.accomplishment && user.accomplishment.trim() ? `
              <div>
                <h5 class="font-medium text-gray-900 mb-2">Key Accomplishment</h5>
                <p class="text-gray-700">${user.accomplishment}</p>
              </div>
            ` : ''}

            <!-- Education -->
            ${user.education && user.education.trim() ? `
              <div>
                <h5 class="font-medium text-gray-900 mb-2">Education</h5>
                <p class="text-gray-700">${user.education}</p>
              </div>
            ` : ''}

            <!-- Employment History -->
            ${user.employmentHistory && user.employmentHistory.trim() ? `
              <div>
                <h5 class="font-medium text-gray-900 mb-2">Experience</h5>
                <p class="text-gray-700">${user.employmentHistory}</p>
              </div>
            ` : ''}

            <!-- Interests -->
            ${user.interestedTopics && user.interestedTopics.length > 0 ? `
              <div>
                <h5 class="font-medium text-gray-900 mb-2">Interested Topics</h5>
                <div class="flex flex-wrap gap-2">
                  ${user.interestedTopics.map(topic => `
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                      ${topic}
                    </span>
                  `).join('')}
                </div>
              </div>
            ` : ''}

            <!-- Responsibility Areas -->
            ${user.responsibilityAreas && user.responsibilityAreas.length > 0 ? `
              <div>
                <h5 class="font-medium text-gray-900 mb-2">Areas of Responsibility</h5>
                <div class="flex flex-wrap gap-2">
                  ${user.responsibilityAreas.map(area => `
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                      ${area}
                    </span>
                  `).join('')}
                </div>
              </div>
            ` : ''}

            <!-- Project Info -->
            ${user.hasProject === 'committed' && user.projectName && user.projectName.trim() ? `
              <div>
                <h5 class="font-medium text-gray-900 mb-2">Current Project</h5>
                <div class="bg-purple-50 p-4 rounded-lg">
                  <h6 class="font-medium text-purple-900">${user.projectName}</h6>
                  ${user.projectDescription && user.projectDescription.trim() ? `<p class="text-purple-700 mt-1">${user.projectDescription}</p>` : ''}
                </div>
              </div>
            ` : ''}

            <!-- Profile Completion Notice -->
            ${(!user.introduction || !user.introduction.trim()) && (!user.bio || !user.bio.trim()) && (!user.accomplishment || !user.accomplishment.trim()) && (!user.education || !user.education.trim()) && (!user.employmentHistory || !user.employmentHistory.trim()) ? `
              <div class="bg-yellow-50 p-4 rounded-lg border border-yellow-200">
                <div class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-yellow-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <div>
                    <h6 class="font-medium text-yellow-900">Profile Incomplete</h6>
                    <p class="text-sm text-yellow-700 mt-1">This member hasn't filled out their detailed profile information yet.</p>
                  </div>
                </div>
              </div>
            ` : ''}

            <!-- Member Since -->
            <div class="pt-4 border-t border-gray-200">
              <p class="text-sm text-gray-500">
                Member since: ${user.createdAt ? new Date(user.createdAt.seconds * 1000).toLocaleDateString() : 'Unknown'}
              </p>
            </div>
          </div>
        </div>
      `;
    }

    function closeModal() {
      const userModal = document.getElementById('userModal');
      const userModalContent = userModal.querySelector('.modal-content');

      userModalContent.classList.remove('show');

      setTimeout(() => {
        userModal.classList.add('hidden');
      }, 200);
    }

    // Close modal when clicking outside
    const userModal = document.getElementById('userModal');
    userModal.addEventListener('click', (e) => {
      if (e.target === userModal) {
        closeModal();
      }
    });

    // Close modal with Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !userModal.classList.contains('hidden')) {
        closeModal();
      }
    });

    // Initialize active tab style
    document.querySelector('.tab-button.active').classList.add('border-primary', 'text-primary');
    document.querySelector('.tab-button.active').classList.remove('border-transparent', 'text-gray-500');

    // Forum Modal Functions with animations
    function openStartDiscussionModal() {
      const modal = document.getElementById('createDiscussionModal');
      const modalContent = modal.querySelector('.modal-content');

      modal.classList.remove('hidden');

      // Add animation
      setTimeout(() => {
        modalContent.classList.add('show');
      }, 10);

      const titleInput = document.getElementById('discussionTitle');
      if (titleInput) {
        setTimeout(() => titleInput.focus(), 100);
      }
    }

    function closeStartDiscussionModal() {
      const modal = document.getElementById('createDiscussionModal');
      const modalContent = modal.querySelector('.modal-content');
      const form = document.getElementById('createDiscussionForm');

      modalContent.classList.remove('show');

      setTimeout(() => {
        modal.classList.add('hidden');
        if (form) {
          form.reset();
          // Reset character counters
          const titleCounter = document.getElementById('titleCounter');
          const contentCounter = document.getElementById('contentCounter');
          if (titleCounter) {
            titleCounter.textContent = '0/200';
            titleCounter.classList.remove('text-red-600');
            titleCounter.classList.add('text-gray-500');
          }
          if (contentCounter) {
            contentCounter.textContent = '0/5000';
            contentCounter.classList.remove('text-red-600');
            contentCounter.classList.add('text-gray-500');
          }
        }
      }, 200);
    }


    // Character counters
    function updateCharacterCount(inputElement, counterId, maxLength) {
      const current = inputElement.value.length;
      const counter = document.getElementById(counterId);

      if (!counter) {
        console.warn(`Counter element with ID '${counterId}' not found`);
        return;
      }

      counter.textContent = `${current}/${maxLength}`;

      if (current > maxLength * 0.9) {
        counter.classList.add('text-red-600');
        counter.classList.remove('text-gray-500');
      } else {
        counter.classList.remove('text-red-600');
        counter.classList.add('text-gray-500');
      }
    }

    // Add event listeners for character counters and forum buttons
    document.addEventListener('DOMContentLoaded', function() {
      const titleInput = document.getElementById('discussionTitle');
      const contentTextarea = document.getElementById('discussionContent');
      const replyTextarea = document.getElementById('replyContent');

      if (titleInput) {
        titleInput.addEventListener('input', function() {
          updateCharacterCount(this, 'titleCounter', 200);
        });
      }

      if (contentTextarea) {
        contentTextarea.addEventListener('input', function() {
          updateCharacterCount(this, 'contentCounter', 5000);
        });
      }

      if (replyTextarea) {
        replyTextarea.addEventListener('input', function() {
          updateCharacterCount(this, 'replyCounter', 2000);
        });
      }

      // Add click listeners for discussion buttons
      const createDiscussionBtn = document.getElementById('createDiscussionBtn');
      const createFirstDiscussionBtn = document.getElementById('createFirstDiscussionBtn');

      if (createDiscussionBtn) {
        createDiscussionBtn.addEventListener('click', openStartDiscussionModal);
      }

      if (createFirstDiscussionBtn) {
        createFirstDiscussionBtn.addEventListener('click', openStartDiscussionModal);
      }

      // Add click listeners for discussion titles
      document.querySelectorAll('.discussion-title').forEach(function(element) {
        element.addEventListener('click', function() {
          const discussionId = this.getAttribute('data-discussion-id');
          if (discussionId) {
            viewDiscussion(discussionId);
          }
        });
      });
    });

    // Handle discussion title clicks
    function viewDiscussion(discussionId) {
      window.location.href = `/admin/community-dashboard/discussion/${discussionId}`;
    }

    // Fix reply modal functionality
    document.addEventListener('DOMContentLoaded', function() {
      // Add event listeners for reply buttons
      document.querySelectorAll('.reply-btn').forEach(function(btn) {
        btn.addEventListener('click', function(e) {
          e.preventDefault();
          const discussionId = this.getAttribute('data-discussion-id');
          const discussionTitle = this.getAttribute('data-discussion-title');
          openReplyModal(discussionId, discussionTitle);
        });
      });

      // Add event listeners for delete discussion buttons
      document.querySelectorAll('.delete-discussion-btn').forEach(function(btn) {
        btn.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation(); // Prevent discussion click
          const discussionId = this.getAttribute('data-discussion-id');
          const discussionTitle = this.getAttribute('data-discussion-title');
          openDeleteDiscussionModal(discussionId, discussionTitle);
        });
      });
    });

    // Fixed reply modal functions with animations
    function openReplyModal(discussionId, discussionTitle) {
      const modal = document.getElementById('replyModal');
      const modalContent = modal.querySelector('.modal-content');
      const titleElement = document.getElementById('replyDiscussionTitle');
      const idInput = document.getElementById('replyDiscussionId');

      if (titleElement) {
        titleElement.textContent = `Replying to: ${discussionTitle}`;
      }
      if (idInput) {
        idInput.value = discussionId;
      }

      modal.classList.remove('hidden');

      // Add animation
      setTimeout(() => {
        modalContent.classList.add('show');
      }, 10);

      const textArea = document.getElementById('replyContent');
      if (textArea) {
        setTimeout(() => textArea.focus(), 100);
      }
    }

    function closeReplyModal() {
      const modal = document.getElementById('replyModal');
      const modalContent = modal.querySelector('.modal-content');
      const form = modal.querySelector('form');

      modalContent.classList.remove('show');

      setTimeout(() => {
        modal.classList.add('hidden');
        if (form) {
          form.reset();
          // Reset character counter
          const counter = document.getElementById('replyCounter');
          if (counter) {
            counter.textContent = '0/2000';
            counter.classList.remove('text-red-600');
            counter.classList.add('text-gray-500');
          }
        }
      }, 200);
    }

    // Close modals when clicking outside
    document.getElementById('createDiscussionModal').addEventListener('click', function(e) {
      if (e.target === this) {
        closeStartDiscussionModal();
      }
    });

    document.getElementById('replyModal').addEventListener('click', function(e) {
      if (e.target === this) {
        closeReplyModal();
      }
    });

    // Delete discussion modal functions
    let discussionToDeleteId = null;

    function openDeleteDiscussionModal(discussionId, discussionTitle) {
      discussionToDeleteId = discussionId;
      const modal = document.getElementById('deleteDiscussionModal');
      const modalContent = modal.querySelector('.modal-content');
      const titleElement = document.getElementById('discussionToDeleteTitle');

      if (titleElement) {
        titleElement.textContent = discussionTitle;
      }

      modal.classList.remove('hidden');

      // Add animation
      setTimeout(() => {
        modalContent.classList.add('show');
      }, 10);
    }

    function closeDeleteDiscussionModal() {
      const modal = document.getElementById('deleteDiscussionModal');
      const modalContent = modal.querySelector('.modal-content');

      modalContent.classList.remove('show');

      setTimeout(() => {
        modal.classList.add('hidden');
        discussionToDeleteId = null;
      }, 200);
    }

    // Delete discussion functionality
    document.addEventListener('DOMContentLoaded', function() {
      const cancelDeleteBtn = document.getElementById('cancelDeleteDiscussionBtn');
      const confirmDeleteBtn = document.getElementById('confirmDeleteDiscussionBtn');
      const deleteModal = document.getElementById('deleteDiscussionModal');

      if (cancelDeleteBtn) {
        cancelDeleteBtn.addEventListener('click', closeDeleteDiscussionModal);
      }

      if (confirmDeleteBtn) {
        confirmDeleteBtn.addEventListener('click', async function() {
          if (!discussionToDeleteId) return;

          try {
            // Disable button and show loading
            confirmDeleteBtn.disabled = true;
            confirmDeleteBtn.innerHTML = `
              <svg class="w-4 h-4 mr-2 animate-spin" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              Deleting...
            `;

            const response = await fetch(`/admin/community-dashboard/discussion/${discussionToDeleteId}`, {
              method: 'DELETE',
              headers: {
                'Content-Type': 'application/json',
              }
            });

            const result = await response.json();

            if (result.success) {
              // Show success message and refresh page
              closeDeleteDiscussionModal();

              // Create temporary success notification
              const notification = document.createElement('div');
              notification.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50';
              notification.textContent = 'Discussion deleted successfully!';
              document.body.appendChild(notification);

              // Refresh page after a short delay
              setTimeout(() => {
                window.location.reload();
              }, 1000);

            } else {
              throw new Error(result.error || 'Failed to delete discussion');
            }

          } catch (error) {
            console.error('Error deleting discussion:', error);

            // Show error message
            const errorDiv = document.createElement('div');
            errorDiv.className = 'fixed top-4 right-4 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg z-50';
            errorDiv.textContent = error.message || 'Failed to delete discussion. Please try again.';
            document.body.appendChild(errorDiv);

            // Remove error message after 3 seconds
            setTimeout(() => {
              if (errorDiv.parentNode) {
                errorDiv.parentNode.removeChild(errorDiv);
              }
            }, 3000);

            // Re-enable button
            confirmDeleteBtn.disabled = false;
            confirmDeleteBtn.innerHTML = 'Delete Discussion';

            // Close modal
            closeDeleteDiscussionModal();
          }
        });
      }

      // Close modal when clicking outside
      deleteModal.addEventListener('click', function(e) {
        if (e.target === deleteModal) {
          closeDeleteDiscussionModal();
        }
      });
    });

    // Close modals with Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        const startModal = document.getElementById('createDiscussionModal');
        const replyModal = document.getElementById('replyModal');
        const userModal = document.getElementById('userModal');
        const deleteDiscussionModal = document.getElementById('deleteDiscussionModal');

        if (!startModal.classList.contains('hidden')) {
          closeStartDiscussionModal();
        }
        if (!replyModal.classList.contains('hidden')) {
          closeReplyModal();
        }
        if (!userModal.classList.contains('hidden')) {
          closeModal();
        }
        if (!deleteDiscussionModal.classList.contains('hidden')) {
          closeDeleteDiscussionModal();
        }
      }
    });

    // Make functions globally available
    window.openStartDiscussionModal = openStartDiscussionModal;
    window.closeStartDiscussionModal = closeStartDiscussionModal;
    window.openReplyModal = openReplyModal;
    window.closeReplyModal = closeReplyModal;
    window.viewDiscussion = viewDiscussion;
  </script>

