<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= project ? 'Edit Project' : 'New Project' %> - Admin Panel</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: "#117dd4"
          }
        }
      }
    };
  </script>
</head>
<body class="bg-gray-50">

  <!-- Sidebar -->
  <div class="fixed inset-y-0 left-0 w-64 bg-gray-900 text-white">
    <div class="flex items-center gap-3 px-6 py-5 border-b border-gray-800">
      <div class="w-10 h-10 bg-primary rounded-full flex items-center justify-center flex-shrink-0">
        <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 48 48">
          <path d="M12.08 24L4 19.25L9.96 8.75L18.04 13.5L18.04 4h11.91l.01 9.5L38.04 8.75L44 19.25L35.92 24L44 28.75L38.04 39.25L29.96 34.5L29.96 44H18.04l-.0 -9.5L9.96 39.25L4 28.75L12.08 24Z"/>
        </svg>
      </div>
      <div>
        <h1 class="text-lg font-bold">PSF Admin</h1>
        <p class="text-xs text-gray-400">Control Panel</p>
      </div>
    </div>

    <nav class="px-4 py-6 space-y-1">
      <a href="/admin/dashboard" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors text-gray-300">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
        </svg>
        <span class="font-medium">Dashboard</span>
      </a>

      <a href="/admin/dashboard" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors text-gray-300">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
        </svg>
        <span class="font-medium">Blog Posts</span>
      </a>

      <a href="/admin/projects" class="flex items-center gap-3 px-4 py-3 rounded-lg bg-gray-800 text-white">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
        </svg>
        <span class="font-medium">Projects</span>
      </a>

      <a href="/admin/users" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors text-gray-300">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
        </svg>
        <span class="font-medium">Users</span>
      </a>

      <div class="pt-6 mt-6 border-t border-gray-800">
        <a href="/blog" target="_blank" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors text-gray-300">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
          <span class="font-medium">View Site</span>
        </a>

        <a href="/admin/logout" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-red-900 transition-colors text-gray-300 hover:text-white">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
          </svg>
          <span class="font-medium">Logout</span>
        </a>
      </div>
    </nav>
  </div>

  <!-- Main Content -->
  <div class="ml-64 min-h-screen">
    <header class="bg-white border-b border-gray-200">
      <div class="px-8 py-4 flex justify-between items-center">
        <div class="flex items-center gap-4">
          <a href="/admin/projects" class="text-gray-600 hover:text-primary">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
          </a>
          <h2 class="text-2xl font-bold text-gray-900"><%= project ? 'Edit Project' : 'New Project' %></h2>
        </div>
        <button type="submit" form="project-form" class="px-6 py-2 bg-primary text-white rounded-lg font-bold hover:bg-opacity-90">
          <%= project ? 'Update' : 'Create' %> Project
        </button>
      </div>
    </header>

    <main class="p-8">
      <form id="project-form" action="<%= project ? `/admin/projects/edit/${project.id}` : '/admin/projects/create' %>" method="POST">

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
          <!-- Main Content -->
          <div class="lg:col-span-2 space-y-6">
            <!-- Title -->
            <div class="bg-white rounded-lg shadow p-6">
              <label for="title" class="block text-sm font-semibold text-gray-700 mb-2">Project Title</label>
              <input
                type="text"
                id="title"
                name="title"
                required
                value="<%= project ? project.title : '' %>"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary text-lg font-semibold"
                placeholder="Enter project title..."
              />
            </div>

            <!-- Description -->
            <div class="bg-white rounded-lg shadow p-6">
              <label for="description" class="block text-sm font-semibold text-gray-700 mb-2">Description</label>
              <textarea
                id="description"
                name="description"
                rows="6"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
                placeholder="Describe the project..."
              ><%= project ? project.description : '' %></textarea>
            </div>

            <!-- Image URL -->
            <div class="bg-white rounded-lg shadow p-6">
              <label for="imageUrl" class="block text-sm font-semibold text-gray-700 mb-2">Featured Image URL</label>
              <input
                type="url"
                id="imageUrl"
                name="imageUrl"
                value="<%= project ? project.imageUrl : '' %>"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
                placeholder="https://example.com/image.jpg"
              />
            </div>
          </div>

          <!-- Sidebar -->
          <div class="space-y-6">
            <!-- Category -->
            <div class="bg-white rounded-lg shadow p-6">
              <label for="category" class="block text-sm font-semibold text-gray-700 mb-2">Category</label>
              <select
                id="category"
                name="category"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
              >
                <option value="">Select category...</option>
                <option value="environment" <%= project && project.category === 'environment' ? 'selected' : '' %>>Environment</option>
                <option value="health" <%= project && project.category === 'health' ? 'selected' : '' %>>Health</option>
                <option value="education" <%= project && project.category === 'education' ? 'selected' : '' %>>Education</option>
                <option value="cybersecurity" <%= project && project.category === 'cybersecurity' ? 'selected' : '' %>>Cybersecurity</option>
                <option value="poverty" <%= project && project.category === 'poverty' ? 'selected' : '' %>>Poverty</option>
                <option value="technology" <%= project && project.category === 'technology' ? 'selected' : '' %>>Technology</option>
                <option value="water" <%= project && project.category === 'water' ? 'selected' : '' %>>Water</option>
                <option value="energy" <%= project && project.category === 'energy' ? 'selected' : '' %>>Energy</option>
                <option value="food" <%= project && project.category === 'food' ? 'selected' : '' %>>Food</option>
              </select>
            </div>

            <!-- Status -->
            <div class="bg-white rounded-lg shadow p-6">
              <label for="status" class="block text-sm font-semibold text-gray-700 mb-2">Status</label>
              <select
                id="status"
                name="status"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
              >
                <option value="planned" <%= project && project.status === 'planned' ? 'selected' : '' %>>Planned</option>
                <option value="active" <%= project && project.status === 'active' ? 'selected' : '' %>>Active</option>
                <option value="completed" <%= project && project.status === 'completed' ? 'selected' : '' %>>Completed</option>
                <option value="paused" <%= project && project.status === 'paused' ? 'selected' : '' %>>Paused</option>
              </select>
            </div>

            <!-- Progress -->
            <div class="bg-white rounded-lg shadow p-6">
              <label for="progress" class="block text-sm font-semibold text-gray-700 mb-2">Progress (%)</label>
              <input
                type="number"
                id="progress"
                name="progress"
                min="0"
                max="100"
                value="<%= project ? project.progress : 0 %>"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
              />
              <div class="mt-3 bg-gray-200 rounded-full h-2">
                <div id="progress-bar" class="bg-primary h-2 rounded-full" style="width: <%= project ? project.progress : 0 %>%"></div>
              </div>
            </div>

            <!-- Completion Date -->
            <div class="bg-white rounded-lg shadow p-6">
              <label for="completionDate" class="block text-sm font-semibold text-gray-700 mb-2">Completion Date</label>
              <input
                type="date"
                id="completionDate"
                name="completionDate"
                value="<%= project && project.completionDate ? project.completionDate : '' %>"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
              />
            </div>

            <!-- Impact Metrics -->
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-sm font-semibold text-gray-700 mb-4">Impact Metrics</h3>

              <div class="mb-4">
                <label for="livesImpacted" class="block text-sm text-gray-600 mb-2">Lives Impacted</label>
                <input
                  type="number"
                  id="livesImpacted"
                  name="livesImpacted"
                  min="0"
                  value="<%= project && project.metrics ? project.metrics.livesImpacted : 0 %>"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
                />
              </div>

              <div>
                <label for="volunteersInvolved" class="block text-sm text-gray-600 mb-2">Volunteers Involved</label>
                <input
                  type="number"
                  id="volunteersInvolved"
                  name="volunteersInvolved"
                  min="0"
                  value="<%= project && project.metrics ? project.metrics.volunteersInvolved : 0 %>"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
                />
              </div>
            </div>
          </div>
        </div>

      </form>
    </main>
  </div>

  <script>
    // Update progress bar when progress input changes
    const progressInput = document.getElementById('progress');

    progressInput.addEventListener('input', function(e) {
      let value = parseInt(e.target.value) || 0;

      // Validação: limitar entre 0 e 100
      if (value < 0) {
        value = 0;
        e.target.value = 0;
      } else if (value > 100) {
        value = 100;
        e.target.value = 100;
      }

      // Atualizar barra de progresso
      document.getElementById('progress-bar').style.width = value + '%';
    });

    // Validação adicional no blur (quando sair do campo)
    progressInput.addEventListener('blur', function(e) {
      let value = parseInt(e.target.value) || 0;

      if (value < 0) {
        e.target.value = 0;
      } else if (value > 100) {
        e.target.value = 100;
      }

      // Atualizar barra de progresso
      document.getElementById('progress-bar').style.width = e.target.value + '%';
    });

    // Prevenir valores inválidos ao colar
    progressInput.addEventListener('paste', function(e) {
      setTimeout(() => {
        let value = parseInt(e.target.value) || 0;
        if (value < 0) value = 0;
        if (value > 100) value = 100;
        e.target.value = value;
        document.getElementById('progress-bar').style.width = value + '%';
      }, 10);
    });
  </script>

</body>
</html>
