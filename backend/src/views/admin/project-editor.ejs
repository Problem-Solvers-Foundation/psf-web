<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= project ? 'Edit Project' : 'New Project' %> - Admin Panel</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: "#117dd4"
          }
        }
      }
    };
  </script>
  <%- include('../partials/admin-styles') %>
</head>
<body class="bg-gray-50">
  <% const currentPage = 'projects'; %>

  <%- include('../partials/admin-mobile-header') %>
  <%- include('../partials/admin-sidebar') %>

  <!-- Main Content -->
  <div class="lg:ml-64 min-h-screen pt-14 lg:pt-0">
    <header class="bg-white border-b border-gray-200 sticky top-14 lg:top-0 z-10">
      <div class="px-4 sm:px-6 lg:px-8 py-4 flex flex-col sm:flex-row justify-between sm:items-center gap-3">
        <div class="flex items-center gap-4">
          <a href="/admin/projects" class="text-gray-600 hover:text-primary">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
          </a>
          <h2 class="text-2xl font-bold text-gray-900"><%= project ? 'Edit Project' : 'New Project' %></h2>
        </div>
        <button type="submit" form="project-form" class="px-6 py-2 bg-primary text-white rounded-lg font-bold hover:bg-opacity-90">
          <%= project ? 'Update' : 'Create' %> Project
        </button>
      </div>
    </header>

    <main class="p-4 sm:p-6 lg:p-8">
      <form id="project-form" action="<%= project ? `/admin/projects/edit/${project.id}` : '/admin/projects/create' %>" method="POST">

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
          <!-- Main Content -->
          <div class="lg:col-span-2 space-y-6">
            <!-- Title -->
            <div class="bg-white rounded-lg shadow p-6">
              <label for="title" class="block text-sm font-semibold text-gray-700 mb-2">Project Title</label>
              <input
                type="text"
                id="title"
                name="title"
                required
                value="<%= project ? project.title : '' %>"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary text-lg font-semibold"
                placeholder="Enter project title..."
              />
            </div>

            <!-- Description -->
            <div class="bg-white rounded-lg shadow p-6">
              <label for="description" class="block text-sm font-semibold text-gray-700 mb-2">Description</label>
              <textarea
                id="description"
                name="description"
                rows="6"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
                placeholder="Describe the project..."
              ><%= project ? project.description : '' %></textarea>
            </div>

            <!-- Image URL -->
            <div class="bg-white rounded-lg shadow p-6">
              <label for="imageUrl" class="block text-sm font-semibold text-gray-700 mb-2">Featured Image URL</label>
              <input
                type="url"
                id="imageUrl"
                name="imageUrl"
                value="<%= project ? project.imageUrl : '' %>"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
                placeholder="https://example.com/image.jpg"
              />
            </div>
          </div>

          <!-- Sidebar -->
          <div class="space-y-6">
            <!-- Category -->
            <div class="bg-white rounded-lg shadow p-6">
              <label for="category" class="block text-sm font-semibold text-gray-700 mb-2">Category</label>
              <select
                id="category"
                name="category"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
              >
                <option value="">Select category...</option>
                <option value="environment" <%= project && project.category === 'environment' ? 'selected' : '' %>>Environment</option>
                <option value="health" <%= project && project.category === 'health' ? 'selected' : '' %>>Health</option>
                <option value="education" <%= project && project.category === 'education' ? 'selected' : '' %>>Education</option>
                <option value="cybersecurity" <%= project && project.category === 'cybersecurity' ? 'selected' : '' %>>Cybersecurity</option>
                <option value="poverty" <%= project && project.category === 'poverty' ? 'selected' : '' %>>Poverty</option>
                <option value="technology" <%= project && project.category === 'technology' ? 'selected' : '' %>>Technology</option>
                <option value="water" <%= project && project.category === 'water' ? 'selected' : '' %>>Water</option>
                <option value="energy" <%= project && project.category === 'energy' ? 'selected' : '' %>>Energy</option>
                <option value="food" <%= project && project.category === 'food' ? 'selected' : '' %>>Food</option>
              </select>
            </div>

            <!-- Status -->
            <div class="bg-white rounded-lg shadow p-6">
              <label for="status" class="block text-sm font-semibold text-gray-700 mb-2">Status</label>
              <select
                id="status"
                name="status"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
              >
                <option value="planned" <%= project && project.status === 'planned' ? 'selected' : '' %>>Planned</option>
                <option value="active" <%= project && project.status === 'active' ? 'selected' : '' %>>Active</option>
                <option value="completed" <%= project && project.status === 'completed' ? 'selected' : '' %>>Completed</option>
                <option value="paused" <%= project && project.status === 'paused' ? 'selected' : '' %>>Paused</option>
              </select>
            </div>

            <!-- Progress -->
            <div class="bg-white rounded-lg shadow p-6">
              <label for="progress" class="block text-sm font-semibold text-gray-700 mb-2">Progress (%)</label>
              <input
                type="number"
                id="progress"
                name="progress"
                min="0"
                max="100"
                value="<%= project ? project.progress : 0 %>"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
              />
              <div class="mt-3 bg-gray-200 rounded-full h-2">
                <div id="progress-bar" class="bg-primary h-2 rounded-full" style="width: <%= project ? project.progress : 0 %>%"></div>
              </div>
            </div>

            <!-- Completion Date -->
            <div class="bg-white rounded-lg shadow p-6">
              <label for="completionDate" class="block text-sm font-semibold text-gray-700 mb-2">Completion Date</label>
              <input
                type="date"
                id="completionDate"
                name="completionDate"
                value="<%= project && project.completionDate ? project.completionDate : '' %>"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
              />
            </div>

            <!-- Impact Metrics -->
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-sm font-semibold text-gray-700 mb-4">Impact Metrics</h3>

              <div class="mb-4">
                <label for="livesImpacted" class="block text-sm text-gray-600 mb-2">Lives Impacted</label>
                <input
                  type="number"
                  id="livesImpacted"
                  name="livesImpacted"
                  min="0"
                  value="<%= project && project.metrics ? project.metrics.livesImpacted : 0 %>"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
                />
              </div>

              <div>
                <label for="volunteersInvolved" class="block text-sm text-gray-600 mb-2">Volunteers Involved</label>
                <input
                  type="number"
                  id="volunteersInvolved"
                  name="volunteersInvolved"
                  min="0"
                  value="<%= project && project.metrics ? project.metrics.volunteersInvolved : 0 %>"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
                />
              </div>
            </div>
          </div>
        </div>

      </form>

      <!-- Project Interests Section (only shown when editing) -->
      <% if (project && typeof projectInterests !== 'undefined') { %>
        <div class="mt-8 bg-white rounded-lg shadow">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">
              Project Candidates
              <span class="ml-2 px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">
                <%= projectInterests.length %>
              </span>
            </h3>
            <p class="text-sm text-gray-600 mt-1">Users who expressed interest in joining this project</p>
          </div>

          <div class="p-6">
            <% if (projectInterests.length === 0) { %>
              <div class="text-center py-8">
                <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
                <p class="text-gray-500">No candidates yet</p>
                <p class="text-sm text-gray-400">Candidates will appear here when users express interest in this project</p>
              </div>
            <% } else { %>
              <div class="space-y-4">
                <% projectInterests.forEach(interest => { %>
                  <div class="flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-gray-50">
                    <div class="flex items-center gap-4">
                      <!-- User Avatar -->
                      <div class="w-10 h-10 bg-primary rounded-full flex items-center justify-center text-white font-semibold">
                        <%= interest.userName.charAt(0).toUpperCase() %>
                      </div>

                      <!-- User Info -->
                      <div class="flex-1">
                        <div class="flex items-center gap-2">
                          <button
                            onclick="showUserDetailsModal('<%= interest.id %>', '<%= interest.userName.replace(/'/g, "\\'") %>', '<%= interest.userEmail.replace(/'/g, "\\'") %>', '<%= interest.message.replace(/'/g, "\\'").replace(/\n/g, "\\n") %>', '<%= interest.submittedAt.toLocaleDateString() %>')"
                            class="text-sm font-medium text-gray-900 hover:text-primary cursor-pointer"
                          >
                            <%= interest.userName %>
                          </button>
                          <% if (interest.status === 'pending') { %>
                            <span class="px-2 py-1 text-xs font-medium bg-yellow-100 text-yellow-800 rounded-full">Pending</span>
                          <% } else if (interest.status === 'approved') { %>
                            <span class="px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full">Approved</span>
                          <% } else if (interest.status === 'rejected') { %>
                            <span class="px-2 py-1 text-xs font-medium bg-red-100 text-red-800 rounded-full">Rejected</span>
                          <% } %>
                        </div>
                        <p class="text-xs text-gray-500 mt-1"><%= interest.userEmail %></p>
                        <p class="text-xs text-gray-500">Applied <%= interest.submittedAt.toLocaleDateString() %></p>
                      </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex items-center gap-2">
                      <% if (interest.status === 'pending') { %>
                        <button
                          onclick="approveInterest('<%= interest.id %>')"
                          class="px-3 py-1 text-xs font-medium text-green-700 bg-green-100 rounded hover:bg-green-200 transition-colors"
                        >
                          Approve
                        </button>
                        <button
                          onclick="rejectInterest('<%= interest.id %>')"
                          class="px-3 py-1 text-xs font-medium text-red-700 bg-red-100 rounded hover:bg-red-200 transition-colors"
                        >
                          Reject
                        </button>
                      <% } else if (interest.status === 'approved') { %>
                        <button
                          onclick="rejectInterest('<%= interest.id %>')"
                          class="px-3 py-1 text-xs font-medium text-red-700 bg-red-100 rounded hover:bg-red-200 transition-colors"
                        >
                          Revoke
                        </button>
                      <% } else if (interest.status === 'rejected') { %>
                        <button
                          onclick="approveInterest('<%= interest.id %>')"
                          class="px-3 py-1 text-xs font-medium text-green-700 bg-green-100 rounded hover:bg-green-200 transition-colors"
                        >
                          Approve
                        </button>
                      <% } %>

                      <!-- Delete Button (always available) -->
                      <button
                        onclick="deleteInterest('<%= interest.id %>', '<%= interest.userName.replace(/'/g, "\\'") %>')"
                        class="px-2 py-1 text-xs font-medium text-gray-600 bg-gray-100 rounded hover:bg-red-100 hover:text-red-600 transition-colors"
                        title="Delete this candidature"
                      >
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1-1H8a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                      </button>
                    </div>
                  </div>
                <% }); %>
              </div>
            <% } %>
          </div>
        </div>
      <% } %>

    </main>
  </div>

  <!-- User Details Modal -->
  <div id="userDetailsModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="bg-white rounded-lg shadow-xl w-full max-w-md">
        <div class="p-6">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-lg font-bold text-gray-900">Candidate Details</h3>
            <button onclick="hideUserDetailsModal()" class="text-gray-400 hover:text-gray-600">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>

          <div class="space-y-4">
            <!-- User Avatar -->
            <div class="text-center">
              <div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center text-white text-xl font-semibold mx-auto mb-2">
                <span id="modalUserInitial"></span>
              </div>
              <h4 class="text-lg font-semibold text-gray-900" id="modalUserName"></h4>
              <p class="text-sm text-gray-600" id="modalUserEmail"></p>
            </div>

            <!-- Application Date -->
            <div class="text-center">
              <p class="text-xs text-gray-500">Applied on <span id="modalAppliedDate"></span></p>
            </div>

            <!-- Interest Message -->
            <div>
              <h5 class="text-sm font-medium text-gray-900 mb-2">Why they want to join:</h5>
              <div class="p-3 bg-gray-50 rounded-lg">
                <p class="text-sm text-gray-700" id="modalUserMessage"></p>
              </div>
            </div>
          </div>

          <div class="flex justify-end mt-6">
            <button
              onclick="hideUserDetailsModal()"
              class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Update progress bar when progress input changes
    const progressInput = document.getElementById('progress');

    progressInput.addEventListener('input', function(e) {
      let value = parseInt(e.target.value) || 0;

      // Validação: limitar entre 0 e 100
      if (value < 0) {
        value = 0;
        e.target.value = 0;
      } else if (value > 100) {
        value = 100;
        e.target.value = 100;
      }

      // Atualizar barra de progresso
      document.getElementById('progress-bar').style.width = value + '%';
    });

    // Validação adicional no blur (quando sair do campo)
    progressInput.addEventListener('blur', function(e) {
      let value = parseInt(e.target.value) || 0;

      if (value < 0) {
        e.target.value = 0;
      } else if (value > 100) {
        e.target.value = 100;
      }

      // Atualizar barra de progresso
      document.getElementById('progress-bar').style.width = e.target.value + '%';
    });

    // Prevenir valores inválidos ao colar
    progressInput.addEventListener('paste', function(e) {
      setTimeout(() => {
        let value = parseInt(e.target.value) || 0;
        if (value < 0) value = 0;
        if (value > 100) value = 100;
        e.target.value = value;
        document.getElementById('progress-bar').style.width = value + '%';
      }, 10);
    });

    // User Details Modal Functions
    function showUserDetailsModal(interestId, userName, userEmail, message, appliedDate) {
      document.getElementById('modalUserInitial').textContent = userName.charAt(0).toUpperCase();
      document.getElementById('modalUserName').textContent = userName;
      document.getElementById('modalUserEmail').textContent = userEmail;
      document.getElementById('modalUserMessage').textContent = message;
      document.getElementById('modalAppliedDate').textContent = appliedDate;
      document.getElementById('userDetailsModal').classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }

    function hideUserDetailsModal() {
      document.getElementById('userDetailsModal').classList.add('hidden');
      document.body.style.overflow = '';
    }

    // Project Interest Actions
    function approveInterest(interestId) {
      if (confirm('Are you sure you want to approve this candidate?')) {
        fetch('/admin/projects/interests/approve/' + interestId, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          }
        })
        .then(response => {
          if (response.ok) {
            location.reload();
          } else {
            alert('Error approving candidate. Please try again.');
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('Error approving candidate. Please try again.');
        });
      }
    }

    function rejectInterest(interestId) {
      if (confirm('Are you sure you want to reject this candidate?')) {
        fetch('/admin/projects/interests/reject/' + interestId, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          }
        })
        .then(response => {
          if (response.ok) {
            location.reload();
          } else {
            alert('Error rejecting candidate. Please try again.');
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('Error rejecting candidate. Please try again.');
        });
      }
    }

    function deleteInterest(interestId, userName) {
      if (confirm(`Are you sure you want to permanently DELETE the candidature from ${userName}?\n\nThis action cannot be undone.`)) {
        fetch('/admin/projects/interests/delete/' + interestId, {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json',
          }
        })
        .then(response => {
          if (response.ok) {
            location.reload();
          } else {
            alert('Error deleting candidate. Please try again.');
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('Error deleting candidate. Please try again.');
        });
      }
    }
  </script>

  <%- include('../partials/admin-scripts') %>
</body>
</html>
