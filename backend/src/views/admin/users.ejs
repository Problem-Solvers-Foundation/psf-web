<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Users - Admin Panel</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: "#117dd4"
          }
        }
      }
    };
  </script>
  <%- include('../partials/admin-styles') %>
</head>
<body class="bg-gray-50">
  <% const currentPage = 'users'; %>

  <%- include('../partials/admin-mobile-header') %>
  <%- include('../partials/admin-sidebar') %>

  <!-- Main Content -->
  <div class="lg:ml-64 min-h-screen pt-14 lg:pt-0">
    <header class="bg-white border-b border-gray-200 sticky top-14 lg:top-0 z-10">
      <div class="px-4 sm:px-6 lg:px-8 py-4 flex flex-col sm:flex-row sm:justify-between sm:items-center gap-3">
        <div>
          <h2 class="text-xl sm:text-2xl font-bold text-gray-900">Users</h2>
          <p class="text-xs sm:text-sm text-gray-600 mt-1">Manage user accounts</p>
        </div>
        <button onclick="showAddUserModal()" class="bg-primary text-white px-4 sm:px-6 py-2 sm:py-3 rounded-lg font-bold hover:bg-opacity-90 transition-all inline-flex items-center justify-center gap-2 text-sm sm:text-base">
          <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Add User
        </button>
      </div>
    </header>

    <main class="p-4 sm:p-6 lg:p-8">
      <!-- Stats -->
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-3 sm:gap-6 mb-6 sm:mb-8">
        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <p class="text-xs sm:text-sm text-gray-600 truncate">Total Users</p>
          <p class="text-2xl sm:text-3xl font-bold text-gray-900 mt-1"><%= users.length %></p>
        </div>
        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <p class="text-xs sm:text-sm text-gray-600 truncate">Active Users</p>
          <p class="text-2xl sm:text-3xl font-bold text-green-600 mt-1"><%= users.filter(u => u.isActive).length %></p>
        </div>
        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <p class="text-xs sm:text-sm text-gray-600 truncate">Admins</p>
          <p class="text-2xl sm:text-3xl font-bold text-purple-600 mt-1"><%= users.filter(u => u.role === 'admin').length %></p>
        </div>
      </div>

      <!-- Users Table -->
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="responsive-table">
          <table class="min-w-full divide-y divide-gray-200 mobile-cards">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Name</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Email</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Role</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Status</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Joined</th>
                <th class="px-4 sm:px-6 py-3 text-right text-xs font-semibold text-gray-700 uppercase">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% if (users.length === 0) { %>
                <tr>
                  <td colspan="6" class="px-4 sm:px-6 py-12 text-center">
                    <p class="text-sm sm:text-base text-gray-500">No users yet. Add your first user!</p>
                  </td>
                </tr>
              <% } else { %>
                <% users.forEach(user => { %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-4 sm:px-6 py-4" data-label="Name">
                      <div class="flex items-center">
                        <div class="w-8 h-8 sm:w-10 sm:h-10 bg-primary rounded-full flex items-center justify-center text-white font-bold text-xs sm:text-base flex-shrink-0">
                          <%= user.name ? user.name.charAt(0).toUpperCase() : '?' %>
                        </div>
                        <div class="ml-2 sm:ml-3 min-w-0">
                          <div class="text-xs sm:text-sm font-semibold text-gray-900 break-words"><%= user.name || 'Unknown' %></div>
                        </div>
                      </div>
                    </td>
                    <td class="px-4 sm:px-6 py-4 text-xs sm:text-sm text-gray-600" data-label="Email">
                      <span class="break-all"><%= user.email %></span>
                    </td>
                    <td class="px-4 sm:px-6 py-4" data-label="Role">
                      <% if (user.role === 'admin') { %>
                        <span class="px-2 sm:px-3 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800 whitespace-nowrap">Admin</span>
                      <% } else if (user.role === 'editor') { %>
                        <span class="px-2 sm:px-3 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800 whitespace-nowrap">Editor</span>
                      <% } else { %>
                        <span class="px-2 sm:px-3 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800 whitespace-nowrap">User</span>
                      <% } %>
                    </td>
                    <td class="px-4 sm:px-6 py-4" data-label="Status">
                      <% if (user.isActive) { %>
                        <span class="px-2 sm:px-3 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800 whitespace-nowrap">Active</span>
                      <% } else { %>
                        <span class="px-2 sm:px-3 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800 whitespace-nowrap">Inactive</span>
                      <% } %>
                    </td>
                    <td class="px-4 sm:px-6 py-4 text-xs sm:text-sm text-gray-600" data-label="Joined">
                      <%= user.createdAt ? new Date(user.createdAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) : 'N/A' %>
                    </td>
                    <td class="px-4 sm:px-6 py-4 text-right text-xs sm:text-sm font-medium" data-label="Actions">
                      <div class="flex flex-wrap gap-2 justify-end">
                        <a href="/admin/users/edit/<%= user.id %>" class="text-primary hover:text-blue-700 whitespace-nowrap">Edit</a>
                        <button onclick="deleteUser('<%= user.id %>', '<%= (user.name || user.email).replace(/'/g, "\\'") %>')" class="text-red-600 hover:text-red-700 whitespace-nowrap">Delete</button>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </div>

  <!-- Add User Modal -->
  <div id="addUserModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
    <div class="bg-white rounded-lg shadow-xl p-6 sm:p-8 max-w-md w-full">
      <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mb-4 sm:mb-6">Add New User</h3>
      <form action="/admin/users/create" method="POST">
        <div class="mb-4">
          <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
            placeholder="John Doe"
          />
        </div>

        <div class="mb-4">
          <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
            placeholder="john@example.com"
          />
        </div>

        <div class="mb-4">
          <label for="password" class="block text-sm font-semibold text-gray-700 mb-2">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            required
            minlength="6"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
            placeholder="Min. 6 characters"
          />
        </div>

        <div class="mb-6">
          <label for="role" class="block text-sm font-semibold text-gray-700 mb-2">Role</label>
          <select
            id="role"
            name="role"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
          >
            <option value="user">User</option>
            <option value="editor">Editor</option>
            <option value="admin">Admin</option>
          </select>
        </div>

        <div class="flex gap-3">
          <button
            type="button"
            onclick="hideAddUserModal()"
            class="flex-1 px-4 py-3 border border-gray-300 rounded-lg text-gray-700 font-semibold hover:bg-gray-50"
          >
            Cancel
          </button>
          <button
            type="submit"
            class="flex-1 px-4 py-3 bg-primary text-white rounded-lg font-bold hover:bg-opacity-90"
          >
            Add User
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    function showAddUserModal() {
      document.getElementById('addUserModal').classList.remove('hidden');
    }

    function hideAddUserModal() {
      document.getElementById('addUserModal').classList.add('hidden');
    }

    function deleteUser(userId, userName) {
      if (confirm(`Are you sure you want to delete "${userName}"?`)) {
        fetch(`/admin/users/delete/${userId}`, {
          method: 'POST'
        })
        .then(res => res.json())
        .then(data => {
          if (data.success) {
            alert('User deleted successfully!');
            location.reload();
          } else {
            alert('Error deleting user: ' + data.error);
          }
        })
        .catch(err => {
          alert('Error: ' + err.message);
        });
      }
    }

    // Close modal when clicking outside
    document.getElementById('addUserModal').addEventListener('click', function(e) {
      if (e.target === this) {
        hideAddUserModal();
      }
    });
  </script>

  <%- include('../partials/admin-scripts') %>
</body>
</html>
