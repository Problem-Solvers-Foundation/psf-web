<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Login - PSF Blog</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: "#117dd4"
          }
        }
      }
    };
  </script>
</head>
<body class="bg-gray-50 min-h-screen flex items-center justify-center">

  <div class="max-w-md w-full">
    <!-- Logo -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-primary rounded-full mb-4">
        <svg class="w-10 h-10 text-white" fill="none" viewBox="0 0 48 48">
          <path d="M12.08 24L4 19.25L9.96 8.75L18.04 13.5L18.04 4h11.91l.01 9.5L38.04 8.75L44 19.25L35.92 24L44 28.75L38.04 39.25L29.96 34.5L29.96 44H18.04l-.0 -9.5L9.96 39.25L4 28.75L12.08 24Z" fill="currentColor"/>
        </svg>
      </div>
      <h1 class="text-3xl font-bold text-gray-900">Admin Panel</h1>
      <p class="text-gray-600 mt-2">Problem Solver Foundation Blog</p>
    </div>

    <!-- Login Form -->
    <div class="bg-white rounded-xl shadow-lg p-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Sign In</h2>

      <% if (locals.error) { %>
        <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded-lg">
          <p class="text-red-800 text-sm font-semibold"><%= error %></p>
          <% if (locals.isBlocked && locals.blockedUntil) { %>
            <div class="mt-3 pt-3 border-t border-red-200">
              <div class="flex items-center justify-center">
                <svg class="w-5 h-5 text-red-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="text-red-900 font-mono text-2xl font-bold" id="countdown">--:--</span>
              </div>
              <p class="text-red-700 text-xs text-center mt-2">Time remaining until you can try again</p>
            </div>
          <% } %>
        </div>
      <% } %>

      <form action="/admin/login" method="POST">
        <!-- Email -->
        <div class="mb-4">
          <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
            placeholder="admin@psf.org"
          />
        </div>

        <!-- Password -->
        <div class="mb-6">
          <label for="password" class="block text-sm font-semibold text-gray-700 mb-2">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
            placeholder="••••••••"
          />
        </div>

        <!-- Remember Me -->
        <div class="mb-6 flex items-center">
          <input
            type="checkbox"
            id="remember"
            name="remember"
            class="w-4 h-4 text-primary border-gray-300 rounded focus:ring-primary"
          />
          <label for="remember" class="ml-2 text-sm text-gray-700">Remember me</label>
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full bg-primary text-white font-bold py-3 px-4 rounded-lg hover:bg-opacity-90 transition-all"
        >
          Sign In
        </button>
      </form>

      <!-- Info -->
      <div class="mt-6 p-4 bg-blue-50 rounded-lg">
        <p class="text-xs text-gray-600">
          <strong>Note:</strong> Use the credentials provided by your administrator. If you don't have access, please contact the system administrator.
        </p>
      </div>
    </div>

    <!-- Back to Blog -->
    <div class="text-center mt-6">
      <a href="/blog" class="text-sm text-gray-600 hover:text-primary">
        ← Back to Blog
      </a>
    </div>
  </div>

  <% if (locals.isBlocked && locals.blockedUntil) { %>
    <script>
      // Cronômetro em tempo real para bloqueio de login
      (function() {
        const blockedUntil = <%= blockedUntil %>;
        const countdownElement = document.getElementById('countdown');
        const submitButton = document.querySelector('button[type="submit"]');
        const emailInput = document.getElementById('email');
        const passwordInput = document.getElementById('password');

        // Desabilitar formulário durante bloqueio
        if (submitButton) submitButton.disabled = true;
        if (submitButton) submitButton.classList.add('opacity-50', 'cursor-not-allowed');
        if (emailInput) emailInput.disabled = true;
        if (passwordInput) passwordInput.disabled = true;

        function updateCountdown() {
          const now = Date.now();
          const remaining = Math.max(0, Math.ceil((blockedUntil - now) / 1000));

          if (remaining <= 0) {
            // Tempo expirou - recarregar página para permitir login
            window.location.reload();
            return;
          }

          const minutes = Math.floor(remaining / 60);
          const seconds = remaining % 60;

          // Formatar como MM:SS
          const formattedTime = `${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;

          if (countdownElement) {
            countdownElement.textContent = formattedTime;

            // Adicionar efeito visual quando está perto de expirar
            if (remaining <= 10) {
              countdownElement.classList.add('text-red-600', 'animate-pulse');
            }
          }
        }

        // Atualizar a cada segundo
        updateCountdown();
        const intervalId = setInterval(updateCountdown, 1000);

        // Limpar interval quando a página é fechada
        window.addEventListener('beforeunload', () => {
          clearInterval(intervalId);
        });
      })();
    </script>
  <% } %>

</body>
</html>
