<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Problems - Admin Panel</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: "#117dd4"
          }
        }
      }
    };
  </script>
  <%- include('../partials/admin-styles') %>
</head>
<body class="bg-gray-50">
  <% const currentPage = 'problems'; %>

  <%- include('../partials/admin-mobile-header') %>
  <%- include('../partials/admin-sidebar') %>

  <!-- Main Content -->
  <div class="lg:ml-64 min-h-screen pt-14 lg:pt-0">
    <header class="bg-white border-b border-gray-200 sticky top-14 lg:top-0 z-10">
      <div class="px-4 sm:px-6 lg:px-8 py-4 flex flex-col sm:flex-row sm:justify-between sm:items-center gap-3">
        <div>
          <h2 class="text-xl sm:text-2xl font-bold text-gray-900">Problems Moderation</h2>
          <p class="text-xs sm:text-sm text-gray-600 mt-1">Review and moderate community problems</p>
        </div>
      </div>
    </header>

    <main class="p-4 sm:p-6 lg:p-8">
      <!-- Success/Error Messages -->
      <% if (success) { %>
        <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
          <p class="text-sm text-green-800"><%= success %></p>
        </div>
      <% } %>

      <% if (error) { %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
          <p class="text-sm text-red-800"><%= error %></p>
        </div>
      <% } %>

      <!-- Status Filter Tabs -->
      <div class="bg-white rounded-lg shadow mb-6">
        <div class="border-b border-gray-200">
          <nav class="-mb-px flex space-x-8 px-6">
            <a href="/admin/problems?status=all" class="py-4 px-1 border-b-2 font-medium text-sm <%= currentStatus === 'all' ? 'border-primary text-primary' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' %>">
              All (<%= statusCounts.all %>)
            </a>
            <a href="/admin/problems?status=pending" class="py-4 px-1 border-b-2 font-medium text-sm <%= currentStatus === 'pending' ? 'border-orange-500 text-orange-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' %>">
              Pending (<%= statusCounts.pending %>)
            </a>
            <a href="/admin/problems?status=approved" class="py-4 px-1 border-b-2 font-medium text-sm <%= currentStatus === 'approved' ? 'border-green-500 text-green-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' %>">
              Approved (<%= statusCounts.approved %>)
            </a>
            <a href="/admin/problems?status=rejected" class="py-4 px-1 border-b-2 font-medium text-sm <%= currentStatus === 'rejected' ? 'border-red-500 text-red-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' %>">
              Rejected (<%= statusCounts.rejected %>)
            </a>
          </nav>
        </div>
      </div>

      <!-- Stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-3 sm:gap-6 mb-6 sm:mb-8">
        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <p class="text-xs sm:text-sm text-gray-600 truncate">Total Problems</p>
          <p class="text-2xl sm:text-3xl font-bold text-gray-900 mt-1"><%= statusCounts.all %></p>
        </div>
        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <p class="text-xs sm:text-sm text-gray-600 truncate">Pending Review</p>
          <p class="text-2xl sm:text-3xl font-bold text-orange-600 mt-1"><%= statusCounts.pending %></p>
        </div>
        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <p class="text-xs sm:text-sm text-gray-600 truncate">Approved</p>
          <p class="text-2xl sm:text-3xl font-bold text-green-600 mt-1"><%= statusCounts.approved %></p>
        </div>
        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <p class="text-xs sm:text-sm text-gray-600 truncate">Rejected</p>
          <p class="text-2xl sm:text-3xl font-bold text-red-600 mt-1"><%= statusCounts.rejected %></p>
        </div>
      </div>

      <!-- Problems Table -->
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="responsive-table">
          <table class="min-w-full divide-y divide-gray-200 mobile-cards">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Problem</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Submitted By</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Location</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Status</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Date</th>
                <th class="px-4 sm:px-6 py-3 text-right text-xs font-semibold text-gray-700 uppercase">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% if (problems.length === 0) { %>
                <tr>
                  <td colspan="6" class="px-4 sm:px-6 py-12 text-center">
                    <p class="text-sm sm:text-base text-gray-500">No problems found for this status.</p>
                  </td>
                </tr>
              <% } else { %>
                <% problems.forEach(problem => { %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-4 sm:px-6 py-4" data-label="Problem">
                      <div class="text-sm font-semibold text-gray-900 break-words"><%= problem.title %></div>
                      <div class="text-xs text-gray-500 mt-1 line-clamp-2"><%= problem.description.length > 100 ? problem.description.substring(0, 100) + '...' : problem.description %></div>
                      <div class="flex items-center gap-2 mt-2">
                        <span class="px-2 py-1 text-xs font-medium rounded bg-blue-100 text-blue-800"><%= problem.knowledgeField %></span>
                        <span class="px-2 py-1 text-xs font-medium rounded <%= problem.urgency === 'high' ? 'bg-red-100 text-red-800' : problem.urgency === 'medium' ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %>">
                          <%= problem.urgency %>
                        </span>
                      </div>
                    </td>
                    <td class="px-4 sm:px-6 py-4 text-sm text-gray-600" data-label="Submitted By">
                      <div class="font-medium"><%= problem.submittedByName %></div>
                      <div class="text-xs text-gray-500"><%= problem.submittedByEmail %></div>
                    </td>
                    <td class="px-4 sm:px-6 py-4 text-sm text-gray-600" data-label="Location">
                      <% if (typeof problem.location === 'object') { %>
                        <%= problem.location.city %><% if (problem.location.state) { %>, <%= problem.location.state %><% } %><br>
                        <span class="text-xs text-gray-500"><%= problem.location.country %></span>
                      <% } else { %>
                        <%= problem.location %>
                      <% } %>
                    </td>
                    <td class="px-4 sm:px-6 py-4" data-label="Status">
                      <% if (problem.status === 'approved') { %>
                        <span class="px-2 sm:px-3 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800 whitespace-nowrap">Approved</span>
                      <% } else if (problem.status === 'rejected') { %>
                        <span class="px-2 sm:px-3 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800 whitespace-nowrap">Rejected</span>
                      <% } else { %>
                        <span class="px-2 sm:px-3 py-1 text-xs font-semibold rounded-full bg-orange-100 text-orange-800 whitespace-nowrap">Pending</span>
                      <% } %>
                    </td>
                    <td class="px-4 sm:px-6 py-4 text-sm text-gray-600" data-label="Date">
                      <div><%= new Date(problem.submittedAt).toLocaleDateString() %></div>
                      <div class="text-xs text-gray-400"><%= new Date(problem.submittedAt).toLocaleTimeString() %></div>
                    </td>
                    <td class="px-4 sm:px-6 py-4 text-right" data-label="Actions">
                      <div class="flex justify-end space-x-2">
                        <% if (problem.status === 'pending') { %>
                          <button onclick="openModerationModal('<%= problem.id %>', '<%= problem.title.replace(/'/g, "\\'") %>', '<%= problem.description.replace(/'/g, "\\'").replace(/\n/g, "\\n") %>', '<%= typeof problem.location === 'object' ? (problem.location.country || '').replace(/'/g, "\\'") : (problem.location || '').replace(/'/g, "\\'") %>', '<%= typeof problem.location === 'object' ? (problem.location.state || '').replace(/'/g, "\\'") : '' %>', '<%= typeof problem.location === 'object' ? (problem.location.city || '').replace(/'/g, "\\'") : '' %>', '<%= problem.knowledgeField.replace(/'/g, "\\'") %>', '<%= problem.urgency %>', '<%= problem.status %>', '<%= problem.adminNotes || "" %>')" class="text-green-600 hover:text-green-800 text-xs font-medium">
                            Moderate
                          </button>
                        <% } %>
                        <button onclick="openModerationModal('<%= problem.id %>', '<%= problem.title.replace(/'/g, "\\'") %>', '<%= problem.description.replace(/'/g, "\\'").replace(/\n/g, "\\n") %>', '<%= typeof problem.location === 'object' ? (problem.location.country || '').replace(/'/g, "\\'") : (problem.location || '').replace(/'/g, "\\'") %>', '<%= typeof problem.location === 'object' ? (problem.location.state || '').replace(/'/g, "\\'") : '' %>', '<%= typeof problem.location === 'object' ? (problem.location.city || '').replace(/'/g, "\\'") : '' %>', '<%= problem.knowledgeField.replace(/'/g, "\\'") %>', '<%= problem.urgency %>', '<%= problem.status %>', '<%= problem.adminNotes || "" %>')" class="text-primary hover:text-primary/80 text-xs font-medium">
                          Edit
                        </button>
                        <form method="POST" action="/admin/problems/delete/<%= problem.id %>" class="inline" onsubmit="return confirm('Are you sure you want to delete this problem?')">
                          <button type="submit" class="text-red-600 hover:text-red-800 text-xs font-medium">Delete</button>
                        </form>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Pagination -->
      <% if (totalPages > 1) { %>
        <div class="flex items-center justify-between border-t border-gray-200 bg-white px-4 py-3 sm:px-6 mt-6 rounded-lg shadow">
          <div class="flex flex-1 justify-between sm:hidden">
            <% if (currentPage > 1) { %>
              <a href="/admin/problems?status=<%= currentStatus %>&page=<%= currentPage - 1 %>" class="relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">Previous</a>
            <% } %>
            <% if (currentPage < totalPages) { %>
              <a href="/admin/problems?status=<%= currentStatus %>&page=<%= currentPage + 1 %>" class="relative ml-3 inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">Next</a>
            <% } %>
          </div>
          <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
            <div>
              <p class="text-sm text-gray-700">
                Showing <span class="font-medium"><%= (currentPage - 1) * 20 + 1 %></span> to <span class="font-medium"><%= Math.min(currentPage * 20, totalProblems) %></span> of <span class="font-medium"><%= totalProblems %></span> results
              </p>
            </div>
            <div>
              <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
                <% if (currentPage > 1) { %>
                  <a href="/admin/problems?status=<%= currentStatus %>&page=<%= currentPage - 1 %>" class="relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0">Previous</a>
                <% } %>
                <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                  <a href="/admin/problems?status=<%= currentStatus %>&page=<%= i %>" class="relative inline-flex items-center px-4 py-2 text-sm font-semibold <%= i === currentPage ? 'bg-primary text-white focus:z-20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary' : 'text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0' %>"><%= i %></a>
                <% } %>
                <% if (currentPage < totalPages) { %>
                  <a href="/admin/problems?status=<%= currentStatus %>&page=<%= currentPage + 1 %>" class="relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0">Next</a>
                <% } %>
              </nav>
            </div>
          </div>
        </div>
      <% } %>
    </main>
  </div>

  <!-- Moderation Modal -->
  <div id="moderationModal" class="fixed inset-0 z-50 hidden overflow-y-auto">
    <div class="flex items-center justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
      <div class="fixed inset-0 transition-opacity">
        <div class="absolute inset-0 bg-gray-500 opacity-75"></div>
      </div>
      <div class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-2xl sm:w-full sm:p-6">
        <form id="moderationForm" method="POST">
          <div class="sm:flex sm:items-start">
            <div class="mt-3 text-center sm:mt-0 sm:text-left w-full">
              <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Moderate Problem</h3>

              <div class="space-y-4">
                <!-- Title -->
                <div>
                  <label class="block text-sm font-medium text-gray-700">Title</label>
                  <input type="text" name="title" id="modalTitle" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary">
                </div>

                <!-- Description -->
                <div>
                  <label class="block text-sm font-medium text-gray-700">Description</label>
                  <textarea name="description" id="modalDescription" rows="4" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary"></textarea>
                </div>

                <!-- Location -->
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Location</label>
                  <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                    <div>
                      <input type="text" name="country" id="modalCountry" placeholder="Country" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary">
                    </div>
                    <div>
                      <input type="text" name="state" id="modalState" placeholder="State/Province" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary">
                    </div>
                    <div>
                      <input type="text" name="city" id="modalCity" placeholder="City" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary">
                    </div>
                  </div>
                </div>

                <!-- Knowledge Field -->
                <div>
                  <label class="block text-sm font-medium text-gray-700">Knowledge Field</label>
                  <input type="text" name="knowledgeField" id="modalKnowledgeField" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary">
                </div>

                <!-- Urgency -->
                <div>
                  <label class="block text-sm font-medium text-gray-700">Urgency</label>
                  <select name="urgency" id="modalUrgency" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary">
                    <option value="low">Low</option>
                    <option value="medium">Medium</option>
                    <option value="high">High</option>
                  </select>
                </div>

                <!-- Admin Notes -->
                <div>
                  <label class="block text-sm font-medium text-gray-700">Admin Notes</label>
                  <textarea name="adminNotes" id="modalAdminNotes" rows="3" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary" placeholder="Internal notes (optional)"></textarea>
                </div>
              </div>
            </div>
          </div>
          <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse gap-3">
            <button type="submit" name="action" value="approve" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-green-600 text-base font-medium text-white hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 sm:ml-3 sm:w-auto sm:text-sm">
              Approve
            </button>
            <button type="submit" name="action" value="reject" class="mt-3 w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:mt-0 sm:w-auto sm:text-sm">
              Reject
            </button>
            <button type="submit" name="action" value="edit" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary sm:mt-0 sm:w-auto sm:text-sm">
              Save Changes
            </button>
            <button type="button" onclick="closeModerationModal()" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:w-auto sm:text-sm">
              Cancel
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    function openModerationModal(id, title, description, country, state, city, knowledgeField, urgency, status, adminNotes) {
      document.getElementById('moderationForm').action = `/admin/problems/moderate/${id}`;
      document.getElementById('modalTitle').value = title;
      document.getElementById('modalDescription').value = description;
      document.getElementById('modalCountry').value = country;
      document.getElementById('modalState').value = state;
      document.getElementById('modalCity').value = city;
      document.getElementById('modalKnowledgeField').value = knowledgeField;
      document.getElementById('modalUrgency').value = urgency;
      document.getElementById('modalAdminNotes').value = adminNotes;
      document.getElementById('moderationModal').classList.remove('hidden');
    }

    function closeModerationModal() {
      document.getElementById('moderationModal').classList.add('hidden');
    }

    // Close modal when clicking outside
    document.getElementById('moderationModal').addEventListener('click', function(e) {
      if (e.target === this) {
        closeModerationModal();
      }
    });
  </script>
</body>
</html>