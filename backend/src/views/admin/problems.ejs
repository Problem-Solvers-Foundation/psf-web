<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Problems - Admin Panel</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: "#117dd4"
          }
        }
      }
    };
  </script>
  <%- include('../partials/admin-styles') %>
</head>
<body class="bg-gray-50">
  <% const currentPage = 'problems'; %>

  <%- include('../partials/admin-mobile-header') %>
  <%- include('../partials/admin-sidebar') %>

  <!-- Main Content -->
  <div class="lg:ml-64 min-h-screen pt-14 lg:pt-0">
    <header class="bg-white border-b border-gray-200 sticky top-14 lg:top-0 z-10">
      <div class="px-4 sm:px-6 lg:px-8 py-4 flex flex-col sm:flex-row sm:justify-between sm:items-center gap-3">
        <div>
          <h2 class="text-xl sm:text-2xl font-bold text-gray-900">Problems Moderation</h2>
          <p class="text-xs sm:text-sm text-gray-600 mt-1">Review and moderate community problems</p>
        </div>
      </div>
    </header>

    <main class="p-4 sm:p-6 lg:p-8">
      <!-- Success/Error Messages -->
      <% if (success) { %>
        <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
          <p class="text-sm text-green-800"><%= success %></p>
        </div>
      <% } %>

      <% if (error) { %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
          <p class="text-sm text-red-800"><%= error %></p>
        </div>
      <% } %>

      <!-- Status Filter Tabs -->
      <div class="bg-white rounded-lg shadow mb-6">
        <div class="border-b border-gray-200">
          <nav class="-mb-px flex space-x-8 px-6">
            <a href="/admin/problems?status=all" class="py-4 px-1 border-b-2 font-medium text-sm <%= currentStatus === 'all' ? 'border-primary text-primary' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' %>">
              All (<%= statusCounts.all %>)
            </a>
            <a href="/admin/problems?status=pending" class="py-4 px-1 border-b-2 font-medium text-sm <%= currentStatus === 'pending' ? 'border-orange-500 text-orange-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' %>">
              Pending (<%= statusCounts.pending %>)
            </a>
            <a href="/admin/problems?status=approved" class="py-4 px-1 border-b-2 font-medium text-sm <%= currentStatus === 'approved' ? 'border-green-500 text-green-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' %>">
              Approved (<%= statusCounts.approved %>)
            </a>
            <a href="/admin/problems?status=rejected" class="py-4 px-1 border-b-2 font-medium text-sm <%= currentStatus === 'rejected' ? 'border-red-500 text-red-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' %>">
              Rejected (<%= statusCounts.rejected %>)
            </a>
          </nav>
        </div>
      </div>

      <!-- Stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-3 sm:gap-6 mb-6 sm:mb-8">
        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <p class="text-xs sm:text-sm text-gray-600 truncate">Total Problems</p>
          <p class="text-2xl sm:text-3xl font-bold text-gray-900 mt-1"><%= statusCounts.all %></p>
        </div>
        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <p class="text-xs sm:text-sm text-gray-600 truncate">Pending Review</p>
          <p class="text-2xl sm:text-3xl font-bold text-orange-600 mt-1"><%= statusCounts.pending %></p>
        </div>
        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <p class="text-xs sm:text-sm text-gray-600 truncate">Approved</p>
          <p class="text-2xl sm:text-3xl font-bold text-green-600 mt-1"><%= statusCounts.approved %></p>
        </div>
        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <p class="text-xs sm:text-sm text-gray-600 truncate">Rejected</p>
          <p class="text-2xl sm:text-3xl font-bold text-red-600 mt-1"><%= statusCounts.rejected %></p>
        </div>
      </div>

      <!-- Problems Table -->
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="responsive-table">
          <table class="min-w-full divide-y divide-gray-200 mobile-cards">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Problem</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Submitted By</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Location</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Status</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Date</th>
                <th class="px-4 sm:px-6 py-3 text-right text-xs font-semibold text-gray-700 uppercase">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% if (problems.length === 0) { %>
                <tr>
                  <td colspan="6" class="px-4 sm:px-6 py-12 text-center">
                    <p class="text-sm sm:text-base text-gray-500">No problems found for this status.</p>
                  </td>
                </tr>
              <% } else { %>
                <% problems.forEach(problem => { %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-4 sm:px-6 py-4" data-label="Problem">
                      <div class="text-sm font-semibold text-gray-900 break-words"><%= problem.title %></div>
                      <div class="text-xs text-gray-500 mt-1 line-clamp-2"><%= problem.description.length > 100 ? problem.description.substring(0, 100) + '...' : problem.description %></div>
                      <div class="flex items-center gap-2 mt-2">
                        <span class="px-2 py-1 text-xs font-medium rounded bg-blue-100 text-blue-800"><%= problem.knowledgeField %></span>
                        <span class="px-2 py-1 text-xs font-medium rounded <%= problem.urgency === 'high' ? 'bg-red-100 text-red-800' : problem.urgency === 'medium' ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %>">
                          <%= problem.urgency %>
                        </span>
                      </div>
                    </td>
                    <td class="px-4 sm:px-6 py-4 text-sm text-gray-600" data-label="Submitted By">
                      <div class="font-medium"><%= problem.submittedByName %></div>
                      <div class="text-xs text-gray-500"><%= problem.submittedByEmail %></div>
                    </td>
                    <td class="px-4 sm:px-6 py-4 text-sm text-gray-600" data-label="Location">
                      <% if (typeof problem.location === 'object') { %>
                        <%= problem.location.city %><% if (problem.location.state) { %>, <%= problem.location.state %><% } %><br>
                        <span class="text-xs text-gray-500"><%= problem.location.country %></span>
                      <% } else { %>
                        <%= problem.location %>
                      <% } %>
                    </td>
                    <td class="px-4 sm:px-6 py-4" data-label="Status">
                      <% if (problem.status === 'approved') { %>
                        <span class="px-2 sm:px-3 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800 whitespace-nowrap">Approved</span>
                      <% } else if (problem.status === 'rejected') { %>
                        <span class="px-2 sm:px-3 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800 whitespace-nowrap">Rejected</span>
                      <% } else { %>
                        <span class="px-2 sm:px-3 py-1 text-xs font-semibold rounded-full bg-orange-100 text-orange-800 whitespace-nowrap">Pending</span>
                      <% } %>
                    </td>
                    <td class="px-4 sm:px-6 py-4 text-sm text-gray-600" data-label="Date">
                      <div><%= new Date(problem.submittedAt).toLocaleDateString() %></div>
                      <div class="text-xs text-gray-400"><%= new Date(problem.submittedAt).toLocaleTimeString() %></div>
                    </td>
                    <td class="px-4 sm:px-6 py-4 text-right" data-label="Actions">
                      <div class="flex justify-end space-x-2">
                        <% if (problem.status === 'pending') { %>
                          <button data-problem-id="<%= problem.id %>" data-problem-data="<%= encodeURIComponent(JSON.stringify(problem)) %>" onclick="openModerationModalFromData(this)" class="text-green-600 hover:text-green-800 text-xs font-medium">
                            Moderate
                          </button>
                        <% } %>
                        <button data-problem-id="<%= problem.id %>" data-problem-data="<%= encodeURIComponent(JSON.stringify(problem)) %>" onclick="openModerationModalFromData(this)" class="text-primary hover:text-primary/80 text-xs font-medium">
                          Edit
                        </button>
                        <form method="POST" action="/admin/problems/delete/<%= problem.id %>" class="inline" onsubmit="return confirm('Are you sure you want to delete this problem?')">
                          <button type="submit" class="text-red-600 hover:text-red-800 text-xs font-medium">Delete</button>
                        </form>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Pagination -->
      <% if (totalPages > 1) { %>
        <div class="flex items-center justify-between border-t border-gray-200 bg-white px-4 py-3 sm:px-6 mt-6 rounded-lg shadow">
          <div class="flex flex-1 justify-between sm:hidden">
            <% if (currentPage > 1) { %>
              <a href="/admin/problems?status=<%= currentStatus %>&page=<%= currentPage - 1 %>" class="relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">Previous</a>
            <% } %>
            <% if (currentPage < totalPages) { %>
              <a href="/admin/problems?status=<%= currentStatus %>&page=<%= currentPage + 1 %>" class="relative ml-3 inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">Next</a>
            <% } %>
          </div>
          <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
            <div>
              <p class="text-sm text-gray-700">
                Showing <span class="font-medium"><%= (currentPage - 1) * 20 + 1 %></span> to <span class="font-medium"><%= Math.min(currentPage * 20, totalProblems) %></span> of <span class="font-medium"><%= totalProblems %></span> results
              </p>
            </div>
            <div>
              <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
                <% if (currentPage > 1) { %>
                  <a href="/admin/problems?status=<%= currentStatus %>&page=<%= currentPage - 1 %>" class="relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0">Previous</a>
                <% } %>
                <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                  <a href="/admin/problems?status=<%= currentStatus %>&page=<%= i %>" class="relative inline-flex items-center px-4 py-2 text-sm font-semibold <%= i === currentPage ? 'bg-primary text-white focus:z-20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary' : 'text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0' %>"><%= i %></a>
                <% } %>
                <% if (currentPage < totalPages) { %>
                  <a href="/admin/problems?status=<%= currentStatus %>&page=<%= currentPage + 1 %>" class="relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0">Next</a>
                <% } %>
              </nav>
            </div>
          </div>
        </div>
      <% } %>

      <!-- Solution Proposals Section -->
      <div class="mt-8 bg-white rounded-lg shadow">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900">
            Proposed Solutions
            <span class="ml-2 px-2 py-1 text-xs font-medium bg-orange-100 text-orange-800 rounded-full">
              <%= solutionProposals.length %>
            </span>
          </h3>
          <p class="text-sm text-gray-600 mt-1">Solutions proposed by community users for approved problems</p>
        </div>

        <div class="p-6">
          <% if (solutionProposals.length === 0) { %>
            <div class="text-center py-8">
              <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
              </svg>
              <p class="text-gray-500">No solution proposals yet</p>
              <p class="text-sm text-gray-400">Community users haven't proposed any solutions yet</p>
            </div>
          <% } else { %>
            <div class="space-y-4">
              <% solutionProposals.forEach(proposal => { %>
                <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50">
                  <div class="flex items-start justify-between">
                    <div class="flex-1">
                      <!-- Proposal Info -->
                      <div class="flex items-start gap-4">
                        <!-- User Avatar -->
                        <div class="w-10 h-10 bg-orange-100 rounded-full flex items-center justify-center text-orange-600 font-semibold flex-shrink-0">
                          <%= proposal.proposedByName.charAt(0).toUpperCase() %>
                        </div>

                        <!-- Content -->
                        <div class="flex-1 min-w-0">
                          <div class="flex items-center gap-2 mb-2">
                            <h4 class="text-sm font-semibold text-gray-900 truncate">
                              <%= proposal.title %>
                            </h4>
                            <% if (proposal.status === 'pending') { %>
                              <span class="px-2 py-1 text-xs font-medium bg-yellow-100 text-yellow-800 rounded-full">Pending Review</span>
                            <% } else if (proposal.status === 'approved') { %>
                              <span class="px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full">Approved</span>
                            <% } else if (proposal.status === 'rejected') { %>
                              <span class="px-2 py-1 text-xs font-medium bg-red-100 text-red-800 rounded-full">Rejected</span>
                            <% } else { %>
                              <span class="px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">Under Review</span>
                            <% } %>
                          </div>

                          <!-- Problem Reference -->
                          <p class="text-xs text-gray-600 mb-2">
                            <span class="font-medium">For problem:</span> <%= proposal.problemTitle %>
                          </p>

                          <!-- Description Preview -->
                          <p class="text-sm text-gray-700 line-clamp-2 mb-3">
                            <%= proposal.description.length > 150 ? proposal.description.substring(0, 150) + '...' : proposal.description %>
                          </p>

                          <!-- Metadata -->
                          <div class="flex items-center gap-4 text-xs text-gray-500">
                            <span>By <%= proposal.proposedByName %></span>
                            <span>•</span>
                            <span>Timeline: <%= proposal.timeline %></span>
                            <span>•</span>
                            <span><%= proposal.submittedAt.toLocaleDateString() %></span>
                          </div>
                        </div>
                      </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex items-center gap-2 ml-4">
                      <button
                        onclick="showProposalDetailsModal('<%= proposal.id %>', '<%= proposal.title.replace(/'/g, "\\'") %>', '<%= proposal.description.replace(/'/g, "\\'").replace(/\n/g, "\\n") %>', '<%= proposal.problemTitle.replace(/'/g, "\\'") %>', '<%= proposal.proposedByName.replace(/'/g, "\\'") %>', '<%= proposal.timeline.replace(/'/g, "\\'") %>', '<%= proposal.requiredSkills ? proposal.requiredSkills.replace(/'/g, "\\'").replace(/\n/g, "\\n") : "" %>', '<%= proposal.submittedAt.toLocaleDateString() %>')"
                        class="px-2 py-1 text-xs font-medium text-gray-600 bg-gray-100 rounded hover:bg-gray-200 transition-colors"
                        title="View details"
                      >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                      </button>

                      <% if (proposal.status === 'pending') { %>
                        <button
                          onclick="approveProposal('<%= proposal.id %>')"
                          class="px-2 py-1 text-xs font-medium text-green-700 bg-green-100 rounded hover:bg-green-200 transition-colors"
                          title="Approve"
                        >
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                          </svg>
                        </button>
                        <button
                          onclick="rejectProposal('<%= proposal.id %>')"
                          class="px-2 py-1 text-xs font-medium text-red-700 bg-red-100 rounded hover:bg-red-200 transition-colors"
                          title="Reject"
                        >
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                          </svg>
                        </button>
                      <% } else { %>
                        <span class="px-2 py-1 text-xs text-gray-500">Reviewed</span>
                      <% } %>
                    </div>
                  </div>
                </div>
              <% }); %>
            </div>
          <% } %>
        </div>
      </div>

    </main>
  </div>

  <!-- Proposal Details Modal -->
  <div id="proposalDetailsModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="bg-white rounded-lg shadow-xl w-full max-w-2xl max-h-[90vh] overflow-y-auto">
        <div class="p-6">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-lg font-bold text-gray-900">Solution Proposal Details</h3>
            <button onclick="hideProposalDetailsModal()" class="text-gray-400 hover:text-gray-600">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>

          <div class="space-y-4">
            <!-- Title -->
            <div>
              <h4 class="text-sm font-medium text-gray-700 mb-1">Solution Title</h4>
              <p class="text-lg font-semibold text-gray-900" id="modalProposalTitle"></p>
            </div>

            <!-- Problem Reference -->
            <div>
              <h4 class="text-sm font-medium text-gray-700 mb-1">For Problem</h4>
              <p class="text-sm text-gray-900" id="modalProposalProblem"></p>
            </div>

            <!-- Proposed By -->
            <div>
              <h4 class="text-sm font-medium text-gray-700 mb-1">Proposed By</h4>
              <p class="text-sm text-gray-900" id="modalProposalAuthor"></p>
            </div>

            <!-- Timeline -->
            <div>
              <h4 class="text-sm font-medium text-gray-700 mb-1">Estimated Timeline</h4>
              <p class="text-sm text-gray-900" id="modalProposalTimeline"></p>
            </div>

            <!-- Description -->
            <div>
              <h4 class="text-sm font-medium text-gray-700 mb-1">Description</h4>
              <div class="p-3 bg-gray-50 rounded-lg">
                <p class="text-sm text-gray-700" id="modalProposalDescription"></p>
              </div>
            </div>

            <!-- Required Skills -->
            <div id="modalSkillsSection" style="display: none;">
              <h4 class="text-sm font-medium text-gray-700 mb-1">Required Skills/Expertise</h4>
              <div class="p-3 bg-gray-50 rounded-lg">
                <p class="text-sm text-gray-700" id="modalProposalSkills"></p>
              </div>
            </div>

            <!-- Submitted Date -->
            <div>
              <h4 class="text-sm font-medium text-gray-700 mb-1">Submitted</h4>
              <p class="text-sm text-gray-600" id="modalProposalDate"></p>
            </div>
          </div>

          <div class="flex justify-end mt-6">
            <button
              onclick="hideProposalDetailsModal()"
              class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Moderation Modal -->
  <div id="moderationModal" class="fixed inset-0 z-50 hidden overflow-y-auto">
    <div class="flex items-center justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
      <div class="fixed inset-0 transition-opacity">
        <div class="absolute inset-0 bg-gray-500 opacity-75"></div>
      </div>
      <div class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-2xl sm:w-full sm:p-6">
        <form id="moderationForm" method="POST">
          <div class="sm:flex sm:items-start">
            <div class="mt-3 text-center sm:mt-0 sm:text-left w-full">
              <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Moderate Problem</h3>

              <div class="space-y-4">
                <!-- Title -->
                <div>
                  <label class="block text-sm font-medium text-gray-700">Title</label>
                  <input type="text" name="title" id="modalTitle" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary">
                </div>

                <!-- Description -->
                <div>
                  <label class="block text-sm font-medium text-gray-700">Description</label>
                  <textarea name="description" id="modalDescription" rows="4" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary"></textarea>
                </div>

                <!-- Location -->
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Location</label>
                  <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                    <div>
                      <input type="text" name="country" id="modalCountry" placeholder="Country" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary">
                    </div>
                    <div>
                      <input type="text" name="state" id="modalState" placeholder="State/Province" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary">
                    </div>
                    <div>
                      <input type="text" name="city" id="modalCity" placeholder="City" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary">
                    </div>
                  </div>
                </div>

                <!-- Knowledge Field -->
                <div>
                  <label class="block text-sm font-medium text-gray-700">Knowledge Field</label>
                  <select name="knowledgeField" id="modalKnowledgeField" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary">
                    <option value="">Select a field...</option>
                    <option value="Technology">Technology</option>
                    <option value="Healthcare">Healthcare</option>
                    <option value="Education">Education</option>
                    <option value="Environment">Environment</option>
                    <option value="Social Issues">Social Issues</option>
                    <option value="Economics">Economics</option>
                    <option value="Infrastructure">Infrastructure</option>
                    <option value="Agriculture">Agriculture</option>
                    <option value="Energy">Energy</option>
                    <option value="Transportation">Transportation</option>
                    <option value="Other">Other</option>
                  </select>
                </div>

                <!-- Urgency -->
                <div>
                  <label class="block text-sm font-medium text-gray-700">Urgency</label>
                  <select name="urgency" id="modalUrgency" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary">
                    <option value="low">Low</option>
                    <option value="medium">Medium</option>
                    <option value="high">High</option>
                  </select>
                </div>

                <!-- Admin Notes -->
                <div>
                  <label class="block text-sm font-medium text-gray-700">Admin Notes</label>
                  <textarea name="adminNotes" id="modalAdminNotes" rows="3" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary" placeholder="Internal notes (optional)"></textarea>
                </div>
              </div>
            </div>
          </div>
          <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse gap-3">
            <button id="approveBtn" type="submit" name="action" value="approve" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-green-600 text-base font-medium text-white hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 sm:ml-3 sm:w-auto sm:text-sm">
              Approve
            </button>
            <button id="rejectBtn" type="submit" name="action" value="reject" class="mt-3 w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:mt-0 sm:w-auto sm:text-sm">
              Reject
            </button>
            <button id="saveChangesBtn" type="submit" name="action" value="edit" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary sm:mt-0 sm:w-auto sm:text-sm">
              Save Changes
            </button>
            <button type="button" onclick="closeModerationModal()" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:w-auto sm:text-sm">
              Cancel
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    function openModerationModalFromData(button) {
      try {
        const problemData = JSON.parse(decodeURIComponent(button.getAttribute('data-problem-data')));
        const id = problemData.id;
        const title = problemData.title || '';
        const description = problemData.description || '';
        const country = (problemData.location && typeof problemData.location === 'object') ? problemData.location.country || '' : problemData.location || '';
        const state = (problemData.location && typeof problemData.location === 'object') ? problemData.location.state || '' : '';
        const city = (problemData.location && typeof problemData.location === 'object') ? problemData.location.city || '' : '';
        const knowledgeField = problemData.knowledgeField || '';
        const urgency = problemData.urgency || 'medium';
        const status = problemData.status || 'pending';
        const adminNotes = problemData.adminNotes || '';

        openModerationModal(id, title, description, country, state, city, knowledgeField, urgency, status, adminNotes);
      } catch (error) {
        console.error('Error parsing problem data:', error);
      }
    }

    function openModerationModal(id, title, description, country, state, city, knowledgeField, urgency, status, adminNotes) {
      console.log('Opening modal for problem:', id, 'status:', status);

      document.getElementById('moderationForm').action = `/admin/problems/moderate/${id}`;
      document.getElementById('modalTitle').value = title;
      document.getElementById('modalDescription').value = description;
      document.getElementById('modalCountry').value = country;
      document.getElementById('modalState').value = state;
      document.getElementById('modalCity').value = city;
      // Set knowledge field select value
      const knowledgeSelect = document.getElementById('modalKnowledgeField');
      knowledgeSelect.value = knowledgeField;
      document.getElementById('modalUrgency').value = urgency;
      document.getElementById('modalAdminNotes').value = adminNotes;

      // Show/hide buttons based on status
      const approveBtn = document.getElementById('approveBtn');
      const rejectBtn = document.getElementById('rejectBtn');
      const saveChangesBtn = document.getElementById('saveChangesBtn');

      if (status === 'pending') {
        // For pending problems, show all buttons
        approveBtn.style.display = 'inline-flex';
        rejectBtn.style.display = 'inline-flex';
        saveChangesBtn.style.display = 'inline-flex';
        saveChangesBtn.textContent = 'Save Changes';
      } else {
        // For approved/rejected problems, only show save changes button for editing
        approveBtn.style.display = 'none';
        rejectBtn.style.display = 'none';
        saveChangesBtn.style.display = 'inline-flex';
        saveChangesBtn.textContent = 'Save Changes';
      }

      document.getElementById('moderationModal').classList.remove('hidden');
    }

    function closeModerationModal() {
      document.getElementById('moderationModal').classList.add('hidden');
    }

    // Close modal when clicking outside
    document.getElementById('moderationModal').addEventListener('click', function(e) {
      if (e.target === this) {
        closeModerationModal();
      }
    });

    // Solution Proposal Functions
    function showProposalDetailsModal(id, title, description, problemTitle, author, timeline, skills, date) {
      const modal = document.getElementById('proposalDetailsModal');
      if (modal) {
        document.getElementById('proposalModalTitle').textContent = title;
        document.getElementById('proposalModalDescription').textContent = description;
        document.getElementById('proposalModalProblem').textContent = problemTitle;
        document.getElementById('proposalModalAuthor').textContent = author;
        document.getElementById('proposalModalTimeline').textContent = timeline;
        document.getElementById('proposalModalSkills').textContent = skills || 'Not specified';
        document.getElementById('proposalModalDate').textContent = date;
        modal.classList.remove('hidden');
      }
    }

    function closeProposalDetailsModal() {
      const modal = document.getElementById('proposalDetailsModal');
      if (modal) {
        modal.classList.add('hidden');
      }
    }

    function approveProposal(id) {
      if (confirm('Are you sure you want to approve this solution proposal?')) {
        fetch(`/admin/problems/proposals/approve/${id}`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          }
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            location.reload();
          } else {
            alert('Error approving proposal: ' + data.message);
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('An error occurred while approving the proposal');
        });
      }
    }

    function rejectProposal(id) {
      if (confirm('Are you sure you want to reject this solution proposal?')) {
        fetch(`/admin/problems/proposals/reject/${id}`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          }
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            location.reload();
          } else {
            alert('Error rejecting proposal: ' + data.message);
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('An error occurred while rejecting the proposal');
        });
      }
    }

    // Close proposal details modal when clicking outside
    const proposalModal = document.getElementById('proposalDetailsModal');
    if (proposalModal) {
      proposalModal.addEventListener('click', function(e) {
        if (e.target === this) {
          closeProposalDetailsModal();
        }
      });
    }
  </script>
</body>
