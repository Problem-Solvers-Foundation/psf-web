<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Community Dashboard - PSF</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: "#117dd4"
          }
        }
      }
    };
  </script>
  <%- include('../partials/admin-styles') %>
</head>
<body class="bg-gray-50">
  <% const currentPage = 'community-dashboard'; %>

  <%- include('../partials/admin-mobile-header') %>
  <%- include('../partials/community-sidebar') %>

  <!-- Main Content -->
  <div class="lg:ml-64 min-h-screen pt-14 lg:pt-0">
    <!-- Top Bar -->
    <header class="bg-white border-b border-gray-200 sticky top-14 lg:top-0 z-10">
      <div class="px-4 sm:px-6 lg:px-8 py-4">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-2xl font-bold text-gray-900">Welcome, <%= user.name %>!</h2>
            <p class="text-sm text-gray-600 mt-1">Community Member Dashboard</p>
          </div>
          <div class="flex items-center gap-2">
            <% if (user.role === 'admin' || user.role === 'superuser') { %>
              <a href="/admin/dashboard" class="px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                Return to Admin Panel
              </a>
            <% } %>
            <span class="px-3 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
              Community User
            </span>
          </div>
        </div>
      </div>
    </header>

    <!-- Page Content -->
    <main class="p-4 sm:p-6 lg:p-8">
      <!-- Success/Error Messages -->
      <% if (typeof success !== 'undefined' && success) { %>
        <div class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg">
          <%= success %>
        </div>
      <% } %>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
          <%= error %>
        </div>
      <% } %>
      <!-- Welcome Card -->
      <div class="bg-gradient-to-r from-primary to-blue-600 rounded-lg shadow-lg p-6 sm:p-8 text-white mb-8">
        <div class="flex items-center gap-4">
          <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </div>
          <div>
            <h3 class="text-xl font-bold mb-2">Welcome to the PSF Community!</h3>
            <p class="text-blue-100">You're part of a global movement of problem solvers working to create positive change in the world.</p>
          </div>
        </div>
      </div>

      <!-- Quick Stats -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 mb-8">
        <div class="bg-white rounded-lg shadow p-6 text-center">
          <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <p class="text-sm text-gray-600">Account Status</p>
          <p class="text-lg font-bold text-gray-900">Active</p>
        </div>

        <div class="bg-white rounded-lg shadow p-6 text-center">
          <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
          </div>
          <p class="text-sm text-gray-600">Discussions</p>
          <p class="text-lg font-bold text-gray-900">Coming Soon</p>
        </div>

        <div class="bg-white rounded-lg shadow p-6 text-center">
          <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
            </svg>
          </div>
          <p class="text-sm text-gray-600">Events Attended</p>
          <p class="text-lg font-bold text-gray-900">0</p>
        </div>

        <div class="bg-white rounded-lg shadow p-6 text-center">
          <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
          </div>
          <p class="text-sm text-gray-600">Resources</p>
          <p class="text-lg font-bold text-gray-900">Explore</p>
        </div>
      </div>

      <!-- Main Content Area -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 sm:gap-8">

        <!-- Community Features -->
        <div class="bg-white rounded-lg shadow p-6">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Community Features</h3>

          <div class="space-y-4">
            <div class="flex items-center gap-3 p-3 rounded-lg border hover:bg-gray-50 cursor-pointer">
              <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900">Discussion Forums</h4>
                <p class="text-sm text-gray-600">Connect with fellow problem solvers</p>
              </div>
            </div>

            <div class="flex items-center gap-3 p-3 rounded-lg border hover:bg-gray-50 cursor-pointer">
              <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900">Community Events</h4>
                <p class="text-sm text-gray-600">Join workshops and networking sessions</p>
              </div>
            </div>

            <div class="flex items-center gap-3 p-3 rounded-lg border hover:bg-gray-50 cursor-pointer">
              <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900">Resource Library</h4>
                <p class="text-sm text-gray-600">Access tools and learning materials</p>
              </div>
            </div>

            <a href="#submit-problem" onclick="showSubmitProblemForm()" class="flex items-center gap-3 p-3 rounded-lg border hover:bg-orange-50 hover:border-orange-300 cursor-pointer transition-colors group">
              <div class="w-10 h-10 bg-orange-100 rounded-full flex items-center justify-center group-hover:bg-orange-200">
                <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900">Submit Problem</h4>
                <p class="text-sm text-gray-600">Report problems that need solutions</p>
              </div>
            </a>

            <a href="/admin/problems/my" class="flex items-center gap-3 p-3 rounded-lg border hover:bg-indigo-50 hover:border-indigo-300 cursor-pointer transition-colors group">
              <div class="w-10 h-10 bg-indigo-100 rounded-full flex items-center justify-center group-hover:bg-indigo-200">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900">My Problems</h4>
                <p class="text-sm text-gray-600">View your submitted problems</p>
              </div>
            </a>
          </div>
        </div>

        <!-- Recent Activity & Updates -->
        <div class="bg-white rounded-lg shadow p-6">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Recent Updates</h3>

          <div class="space-y-4">
            <div class="border-l-4 border-primary pl-4">
              <h4 class="font-semibold text-gray-900 text-sm">Welcome to PSF Community!</h4>
              <p class="text-sm text-gray-600 mt-1">Thank you for joining our community of problem solvers. Explore the features available to you.</p>
              <p class="text-xs text-gray-500 mt-2">Just now</p>
            </div>

            <div class="border-l-4 border-blue-300 pl-4">
              <h4 class="font-semibold text-gray-900 text-sm">Community Features Coming Soon</h4>
              <p class="text-sm text-gray-600 mt-1">We're working on exciting new features for community members. Stay tuned!</p>
              <p class="text-xs text-gray-500 mt-2">Today</p>
            </div>

            <div class="border-l-4 border-green-300 pl-4">
              <h4 class="font-semibold text-gray-900 text-sm">Profile Completed</h4>
              <p class="text-sm text-gray-600 mt-1">Your account has been set up successfully. You can update your profile anytime from the sidebar.</p>
              <p class="text-xs text-gray-500 mt-2">Today</p>
            </div>
          </div>
        </div>

      </div>

      <!-- Call to Action -->
      <div class="mt-8 bg-gray-100 rounded-lg p-6">
        <div class="text-center">
          <h3 class="text-lg font-bold text-gray-900 mb-2">Ready to Make an Impact?</h3>
          <p class="text-gray-600 mb-4">Connect with other problem solvers and start working on solutions that matter.</p>
          <div class="flex flex-col sm:flex-row gap-3 justify-center">
            <a href="/" class="px-6 py-3 bg-primary text-white rounded-lg font-semibold hover:bg-opacity-90 transition-colors">
              Explore Main Website
            </a>
            <a href="/admin/profile" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg font-semibold hover:bg-gray-50 transition-colors">
              Update Profile
            </a>
          </div>
        </div>
      </div>

    </main>
  </div>

  <!-- Submit Problem Modal -->
  <div id="submitProblemModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="bg-white rounded-lg shadow-xl w-full max-w-2xl max-h-[90vh] overflow-y-auto">
        <div class="p-6">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-lg font-bold text-gray-900">Submit a Problem</h3>
            <button onclick="hideSubmitProblemForm()" class="text-gray-400 hover:text-gray-600">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>

          <form action="/admin/problems/submit" method="POST">
            <div class="space-y-6">
              <!-- Title -->
              <div>
                <label for="title" class="block text-sm font-medium text-gray-700 mb-2">
                  Problem Title <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="title"
                  name="title"
                  required
                  minlength="5"
                  maxlength="200"
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
                  placeholder="Brief description of the problem"
                >
              </div>

              <!-- Description -->
              <div>
                <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
                  Detailed Description <span class="text-red-500">*</span>
                </label>
                <textarea
                  id="description"
                  name="description"
                  required
                  minlength="20"
                  maxlength="2000"
                  rows="6"
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
                  placeholder="Provide detailed information about the problem, its impact, and why it needs to be solved..."
                ></textarea>
                <p class="mt-1 text-sm text-gray-500">
                  <span id="descCounter">0</span>/2000 characters
                </p>
              </div>

              <!-- Location -->
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Location <span class="text-red-500">*</span>
                </label>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                  <div>
                    <input
                      type="text"
                      id="country"
                      name="country"
                      required
                      minlength="2"
                      maxlength="50"
                      class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
                      placeholder="Country"
                    >
                  </div>
                  <div>
                    <input
                      type="text"
                      id="state"
                      name="state"
                      minlength="2"
                      maxlength="50"
                      class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
                      placeholder="State/Province (optional)"
                    >
                  </div>
                  <div>
                    <input
                      type="text"
                      id="city"
                      name="city"
                      required
                      minlength="2"
                      maxlength="50"
                      class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
                      placeholder="City"
                    >
                  </div>
                </div>
              </div>

              <!-- Knowledge Field -->
              <div>
                <label for="knowledgeField" class="block text-sm font-medium text-gray-700 mb-2">
                  Knowledge Field <span class="text-red-500">*</span>
                </label>
                <select
                  id="knowledgeField"
                  name="knowledgeField"
                  required
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
                >
                  <option value="">Select a field...</option>
                  <option value="Technology">Technology</option>
                  <option value="Healthcare">Healthcare</option>
                  <option value="Education">Education</option>
                  <option value="Environment">Environment</option>
                  <option value="Social Issues">Social Issues</option>
                  <option value="Economics">Economics</option>
                  <option value="Infrastructure">Infrastructure</option>
                  <option value="Agriculture">Agriculture</option>
                  <option value="Energy">Energy</option>
                  <option value="Transportation">Transportation</option>
                  <option value="Other">Other</option>
                </select>
              </div>

              <!-- Urgency -->
              <div>
                <label for="urgency" class="block text-sm font-medium text-gray-700 mb-2">
                  Urgency Level
                </label>
                <select
                  id="urgency"
                  name="urgency"
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
                >
                  <option value="low">Low - Can wait for solution</option>
                  <option value="medium" selected>Medium - Should be addressed</option>
                  <option value="high">High - Needs urgent attention</option>
                  <option value="critical">Critical - Immediate action required</option>
                </select>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex items-center justify-end gap-3 mt-8 pt-6 border-t border-gray-200">
              <button
                type="button"
                onclick="hideSubmitProblemForm()"
                class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:ring-2 focus:ring-primary focus:ring-offset-2 transition-colors"
              >
                Cancel
              </button>
              <button
                type="submit"
                class="px-6 py-2 text-sm font-medium text-white bg-primary rounded-lg hover:bg-primary/90 focus:ring-2 focus:ring-primary focus:ring-offset-2 transition-colors"
              >
                Submit Problem
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Problem submission form functions
    function showSubmitProblemForm() {
      document.getElementById('submitProblemModal').classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }

    function hideSubmitProblemForm() {
      document.getElementById('submitProblemModal').classList.add('hidden');
      document.body.style.overflow = '';
    }

    // Character counter for description
    document.addEventListener('DOMContentLoaded', function() {
      const descTextarea = document.getElementById('description');
      const descCounter = document.getElementById('descCounter');

      function updateDescCounter() {
        const length = descTextarea.value.length;
        descCounter.textContent = length;

        if (length > 1800) {
          descCounter.style.color = '#dc2626'; // red
        } else if (length > 1600) {
          descCounter.style.color = '#ea580c'; // orange
        } else {
          descCounter.style.color = '#6b7280'; // gray
        }
      }

      descTextarea.addEventListener('input', updateDescCounter);
      updateDescCounter(); // Initial count
    });
  </script>

  <%- include('../partials/admin-scripts') %>
</body>
</html>