<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - Admin Panel</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: "#117dd4"
          }
        }
      }
    };
  </script>
</head>
<body class="bg-gray-50">
  <% const currentPage = 'dashboard'; %>

  <%- include('../partials/admin-mobile-header') %>
  <%- include('../partials/admin-sidebar') %>

  <!-- Main Content -->
  <div class="lg:ml-64 min-h-screen pt-14 lg:pt-0">
    <!-- Top Bar -->
    <header class="bg-white border-b border-gray-200 sticky top-14 lg:top-0 z-10">
      <div class="px-4 sm:px-6 lg:px-8 py-4">
        <h2 class="text-xl sm:text-2xl font-bold text-gray-900">Dashboard</h2>
        <p class="text-xs sm:text-sm text-gray-600 mt-1">Welcome to the PSF Admin Panel</p>
      </div>
    </header>

    <!-- Content -->
    <main class="p-4 sm:p-6 lg:p-8">
      <!-- Stats Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 mb-6 sm:mb-8">
        <!-- Blog Posts -->
        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <div class="flex items-center justify-between">
            <div class="flex-1 min-w-0">
              <p class="text-xs sm:text-sm text-gray-600 truncate">Blog Posts</p>
              <p class="text-2xl sm:text-3xl font-bold text-gray-900 mt-1"><%= posts.length %></p>
              <p class="text-xs text-green-600 mt-2">
                <%= posts.filter(p => p.isPublished).length %> published
              </p>
            </div>
            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0 ml-3">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
              </svg>
            </div>
          </div>
        </div>

        <!-- Projects -->
        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <div class="flex items-center justify-between">
            <div class="flex-1 min-w-0">
              <p class="text-xs sm:text-sm text-gray-600 truncate">Projects</p>
              <p class="text-2xl sm:text-3xl font-bold text-gray-900 mt-1"><%= projects.length %></p>
              <p class="text-xs text-green-600 mt-2">
                <%= projects.filter(p => p.status === 'active').length %> active
              </p>
            </div>
            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0 ml-3">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
              </svg>
            </div>
          </div>
        </div>

        <!-- Users -->
        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <div class="flex items-center justify-between">
            <div class="flex-1 min-w-0">
              <p class="text-xs sm:text-sm text-gray-600 truncate">Users</p>
              <p class="text-2xl sm:text-3xl font-bold text-gray-900 mt-1"><%= users.length %></p>
              <p class="text-xs text-purple-600 mt-2">
                <%= users.filter(u => u.isActive).length %> active
              </p>
            </div>
            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0 ml-3">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
              </svg>
            </div>
          </div>
        </div>

        <!-- Views (placeholder) -->
        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <div class="flex items-center justify-between">
            <div class="flex-1 min-w-0">
              <p class="text-xs sm:text-sm text-gray-600 truncate">Total Views</p>
              <p class="text-2xl sm:text-3xl font-bold text-gray-900 mt-1">-</p>
              <p class="text-xs text-gray-500 mt-2">Coming soon</p>
            </div>
            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-yellow-100 rounded-lg flex items-center justify-center flex-shrink-0 ml-3">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="bg-white rounded-lg shadow mb-6 sm:mb-8">
        <div class="px-4 sm:px-6 py-4 border-b border-gray-200">
          <h3 class="text-base sm:text-lg font-semibold text-gray-900">Quick Actions</h3>
        </div>
        <div class="p-4 sm:p-6 grid grid-cols-1 md:grid-cols-3 gap-3 sm:gap-4">
          <a href="/admin/posts/new" class="flex items-center gap-3 sm:gap-4 p-3 sm:p-4 border-2 border-gray-200 rounded-lg hover:border-primary hover:bg-blue-50 transition-all group">
            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-blue-100 rounded-lg flex items-center justify-center group-hover:bg-primary group-hover:text-white transition-colors flex-shrink-0">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-blue-600 group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm sm:text-base font-semibold text-gray-900 truncate">New Blog Post</p>
              <p class="text-xs sm:text-sm text-gray-600 truncate">Create new article</p>
            </div>
          </a>

          <a href="/admin/projects/new" class="flex items-center gap-3 sm:gap-4 p-3 sm:p-4 border-2 border-gray-200 rounded-lg hover:border-green-500 hover:bg-green-50 transition-all group">
            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-green-100 rounded-lg flex items-center justify-center group-hover:bg-green-500 group-hover:text-white transition-colors flex-shrink-0">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-green-600 group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm sm:text-base font-semibold text-gray-900 truncate">New Project</p>
              <p class="text-xs sm:text-sm text-gray-600 truncate">Add new project</p>
            </div>
          </a>

          <a href="/admin/users" class="flex items-center gap-3 sm:gap-4 p-3 sm:p-4 border-2 border-gray-200 rounded-lg hover:border-purple-500 hover:bg-purple-50 transition-all group">
            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-purple-100 rounded-lg flex items-center justify-center group-hover:bg-purple-500 group-hover:text-white transition-colors flex-shrink-0">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-purple-600 group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm sm:text-base font-semibold text-gray-900 truncate">Manage Users</p>
              <p class="text-xs sm:text-sm text-gray-600 truncate">View all users</p>
            </div>
          </a>
        </div>
      </div>

      <!-- Recent Posts -->
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-4 sm:px-6 py-4 border-b border-gray-200 flex flex-col sm:flex-row sm:justify-between sm:items-center gap-2">
          <h3 class="text-base sm:text-lg font-semibold text-gray-900">Recent Posts</h3>
          <a href="/admin/posts" class="text-sm text-primary hover:text-blue-700 font-medium">View all →</a>
        </div>
        <div class="divide-y divide-gray-200">
          <% if (posts.length === 0) { %>
            <div class="px-4 sm:px-6 py-8 text-center text-gray-500">
              <p class="text-sm sm:text-base">No posts yet. Create your first post!</p>
            </div>
          <% } else { %>
            <% posts.slice(0, 5).forEach(post => { %>
              <div class="px-4 sm:px-6 py-4 hover:bg-gray-50 transition-colors">
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
                  <div class="flex-1 min-w-0">
                    <h4 class="text-sm sm:text-base font-semibold text-gray-900 truncate"><%= post.title %></h4>
                    <p class="text-xs sm:text-sm text-gray-600 mt-1 truncate">by <%= post.author || 'Unknown' %> • <%= new Date(post.createdAt).toLocaleDateString() %></p>
                  </div>
                  <div class="flex items-center gap-2 sm:gap-3 flex-shrink-0">
                    <% if (post.isPublished) { %>
                      <span class="px-2 sm:px-3 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800 whitespace-nowrap">Published</span>
                    <% } else { %>
                      <span class="px-2 sm:px-3 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800 whitespace-nowrap">Draft</span>
                    <% } %>
                    <a href="/admin/posts/edit/<%= post.id %>" class="text-primary hover:text-blue-700 text-xs sm:text-sm font-medium whitespace-nowrap">Edit</a>
                  </div>
                </div>
              </div>
            <% }); %>
          <% } %>
        </div>
      </div>
    </main>
  </div>

  <%- include('../partials/admin-scripts') %>
</body>
</html>
