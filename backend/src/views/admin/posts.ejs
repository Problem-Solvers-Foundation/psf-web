<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog Posts - Admin Panel</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: "#117dd4"
          }
        }
      }
    };
  </script>
  <%- include('../partials/admin-styles') %>
</head>
<body class="bg-gray-50">
  <% const currentPage = 'posts'; %>

  <%- include('../partials/admin-mobile-header') %>
  <%- include('../partials/admin-sidebar') %>

  <!-- Main Content -->
  <div class="lg:ml-64 min-h-screen pt-14 lg:pt-0">
    <header class="bg-white border-b border-gray-200 sticky top-14 lg:top-0 z-10">
      <div class="px-4 sm:px-6 lg:px-8 py-4 flex flex-col sm:flex-row sm:justify-between sm:items-center gap-3">
        <div>
          <h2 class="text-xl sm:text-2xl font-bold text-gray-900">Blog Posts</h2>
          <p class="text-xs sm:text-sm text-gray-600 mt-1">Manage all blog posts</p>
        </div>
        <a href="/admin/posts/new" class="bg-primary text-white px-4 sm:px-6 py-2 sm:py-3 rounded-lg font-bold hover:bg-opacity-90 transition-all inline-flex items-center justify-center gap-2 text-sm sm:text-base">
          <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          New Post
        </a>
      </div>
    </header>

    <main class="p-4 sm:p-6 lg:p-8">
      <!-- Stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-3 sm:gap-6 mb-6 sm:mb-8">
        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <p class="text-xs sm:text-sm text-gray-600 truncate">Total Posts</p>
          <p class="text-2xl sm:text-3xl font-bold text-gray-900 mt-1"><%= posts.length %></p>
        </div>
        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <p class="text-xs sm:text-sm text-gray-600 truncate">Published</p>
          <p class="text-2xl sm:text-3xl font-bold text-green-600 mt-1"><%= posts.filter(p => p.isPublished).length %></p>
        </div>
        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <p class="text-xs sm:text-sm text-gray-600 truncate">Drafts</p>
          <p class="text-2xl sm:text-3xl font-bold text-yellow-600 mt-1"><%= posts.filter(p => !p.isPublished).length %></p>
        </div>
        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <p class="text-xs sm:text-sm text-gray-600 truncate">Categories</p>
          <p class="text-2xl sm:text-3xl font-bold text-purple-600 mt-1"><%= [...new Set(posts.map(p => p.category))].length %></p>
        </div>
      </div>

      <!-- Posts Table -->
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="responsive-table">
          <table class="min-w-full divide-y divide-gray-200 mobile-cards">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Title</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Author</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Category</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Status</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Date</th>
                <th class="px-4 sm:px-6 py-3 text-right text-xs font-semibold text-gray-700 uppercase">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% if (posts.length === 0) { %>
                <tr>
                  <td colspan="6" class="px-4 sm:px-6 py-12 text-center">
                    <p class="text-sm sm:text-base text-gray-500">No posts yet. Create your first post!</p>
                  </td>
                </tr>
              <% } else { %>
                <% posts.forEach(post => { %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-4 sm:px-6 py-4" data-label="Title">
                      <div class="text-sm font-semibold text-gray-900 break-words"><%= post.title %></div>
                    </td>
                    <td class="px-4 sm:px-6 py-4 text-sm text-gray-600" data-label="Author"><%= post.author || 'N/A' %></td>
                    <td class="px-4 sm:px-6 py-4" data-label="Category">
                      <span class="px-2 sm:px-3 py-1 text-xs font-semibold rounded-full bg-primary/10 text-primary whitespace-nowrap"><%= post.category %></span>
                    </td>
                    <td class="px-4 sm:px-6 py-4" data-label="Status">
                      <% if (post.isPublished) { %>
                        <span class="px-2 sm:px-3 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800 whitespace-nowrap">Published</span>
                      <% } else { %>
                        <span class="px-2 sm:px-3 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800 whitespace-nowrap">Draft</span>
                      <% } %>
                    </td>
                    <td class="px-4 sm:px-6 py-4 text-xs sm:text-sm text-gray-600" data-label="Date">
                      <%= new Date(post.createdAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %>
                    </td>
                    <td class="px-4 sm:px-6 py-4 text-right text-xs sm:text-sm font-medium" data-label="Actions">
                      <div class="flex flex-wrap gap-2 justify-end md:justify-end">
                        <% if (post.isPublished) { %>
                          <a href="/blog/<%= post.slug %>" target="_blank" class="text-gray-600 hover:text-primary whitespace-nowrap">View</a>
                        <% } else { %>
                          <a href="/admin/posts/preview/<%= post.id %>" target="_blank" class="text-gray-600 hover:text-primary whitespace-nowrap">Preview</a>
                        <% } %>
                        <a href="/admin/posts/edit/<%= post.id %>" class="text-primary hover:text-blue-700 whitespace-nowrap">Edit</a>
                        <button onclick="toggleStatus('<%= post.id %>', <%= post.isPublished %>)" class="text-purple-600 hover:text-purple-700 whitespace-nowrap">
                          <%= post.isPublished ? 'Unpublish' : 'Publish' %>
                        </button>
                        <button onclick="deletePost('<%= post.id %>', '<%= post.title.replace(/'/g, "\\'") %>')" class="text-red-600 hover:text-red-700 whitespace-nowrap">Delete</button>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </div>

  <script>
    function deletePost(postId, postTitle) {
      if (confirm(`Are you sure you want to delete "${postTitle}"?`)) {
        fetch(`/admin/posts/delete/${postId}`, {
          method: 'POST'
        })
        .then(res => res.json())
        .then(data => {
          if (data.success) {
            alert('Post deleted successfully!');
            location.reload();
          } else {
            alert('Error deleting post: ' + data.error);
          }
        })
        .catch(err => {
          alert('Error: ' + err.message);
        });
      }
    }

    function toggleStatus(postId, currentStatus) {
      const action = currentStatus ? 'unpublish' : 'publish';
      if (confirm(`Are you sure you want to ${action} this post?`)) {
        fetch(`/admin/posts/toggle/${postId}`, {
          method: 'POST'
        })
        .then(res => res.json())
        .then(data => {
          if (data.success) {
            alert(data.message);
            location.reload();
          } else {
            alert('Error: ' + data.error);
          }
        })
        .catch(err => {
          alert('Error: ' + err.message);
        });
      }
    }
  </script>

  <%- include('../partials/admin-scripts') %>
</body>
</html>
