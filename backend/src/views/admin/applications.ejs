<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Applications - PSF Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: "#117dd4"
          }
        }
      }
    };
  </script>
  <%- include('../partials/admin-styles') %>
</head>
<body class="bg-gray-50">
  <% const currentPage = 'applications'; %>

  <%- include('../partials/admin-mobile-header') %>
  <%- include('../partials/admin-sidebar') %>

  <!-- Main Content -->
  <div class="lg:ml-64 min-h-screen pt-14 lg:pt-0">
    <!-- Top Bar -->
    <header class="bg-white border-b border-gray-200 sticky top-14 lg:top-0 z-10">
      <div class="px-4 sm:px-6 lg:px-8 py-4">
        <h2 class="text-xl sm:text-2xl font-bold text-gray-900">Applications</h2>
        <p class="text-xs sm:text-sm text-gray-600 mt-1">Manage candidate applications for Problem Solvers Foundation</p>
      </div>
    </header>

    <!-- Page Content -->
    <main class="p-4 sm:p-6 lg:p-8">
      <!-- Stats Cards -->
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-3 sm:gap-4 mb-6 sm:mb-8">
        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <div class="flex items-center justify-between">
            <div class="flex-1 min-w-0">
              <p class="text-xs sm:text-sm text-gray-600 truncate">Total</p>
              <p class="text-xl sm:text-2xl font-bold text-gray-900"><%= stats.total %></p>
            </div>
            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0 ml-2">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <div class="flex items-center justify-between">
            <div class="flex-1 min-w-0">
              <p class="text-xs sm:text-sm text-gray-600 truncate">Pending</p>
              <p class="text-xl sm:text-2xl font-bold text-yellow-600"><%= stats.pending %></p>
            </div>
            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-yellow-100 rounded-full flex items-center justify-center flex-shrink-0 ml-2">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <div class="flex items-center justify-between">
            <div class="flex-1 min-w-0">
              <p class="text-xs sm:text-sm text-gray-600 truncate">Reviewing</p>
              <p class="text-xl sm:text-2xl font-bold text-blue-600"><%= stats.reviewing %></p>
            </div>
            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0 ml-2">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <div class="flex items-center justify-between">
            <div class="flex-1 min-w-0">
              <p class="text-xs sm:text-sm text-gray-600 truncate">Approved</p>
              <p class="text-xl sm:text-2xl font-bold text-green-600"><%= stats.approved %></p>
            </div>
            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0 ml-2">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <div class="flex items-center justify-between">
            <div class="flex-1 min-w-0">
              <p class="text-xs sm:text-sm text-gray-600 truncate">Rejected</p>
              <p class="text-xl sm:text-2xl font-bold text-red-600"><%= stats.rejected %></p>
            </div>
            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-red-100 rounded-full flex items-center justify-center flex-shrink-0 ml-2">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- Applications Table -->
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="responsive-table">
          <table class="min-w-full divide-y divide-gray-200 mobile-cards">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Applicant</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Email</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Location</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Grit Score</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Period</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Submitted</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Status</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% if (applications.length === 0) { %>
                <tr>
                  <td colspan="8" class="px-4 sm:px-6 py-12 text-center text-gray-500">
                    <svg class="mx-auto h-10 w-10 sm:h-12 sm:w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    <p class="text-base sm:text-lg font-medium">No applications yet</p>
                    <p class="text-xs sm:text-sm">Applications will appear here when candidates submit them</p>
                  </td>
                </tr>
              <% } else { %>
                <% applications.forEach(app => { %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-4 sm:px-6 py-4" data-label="Applicant">
                      <div class="flex items-center">
                        <div class="flex-shrink-0 h-8 w-8 sm:h-10 sm:w-10 bg-primary rounded-full flex items-center justify-center">
                          <span class="text-white font-medium text-xs sm:text-sm"><%= app.fullName ? app.fullName.charAt(0).toUpperCase() : '?' %></span>
                        </div>
                        <div class="ml-2 sm:ml-4 min-w-0">
                          <div class="text-xs sm:text-sm font-medium text-gray-900 break-words"><%= app.fullName || 'N/A' %></div>
                          <div class="text-xs text-gray-500">Age <%= app.age || 'N/A' %></div>
                        </div>
                      </div>
                    </td>
                    <td class="px-4 sm:px-6 py-4" data-label="Email">
                      <div class="text-xs sm:text-sm text-gray-900 break-all"><%= app.email %></div>
                    </td>
                    <td class="px-4 sm:px-6 py-4" data-label="Location">
                      <div class="text-xs sm:text-sm text-gray-900"><%= app.location || 'N/A' %></div>
                    </td>
                    <td class="px-4 sm:px-6 py-4" data-label="Grit Score">
                      <% if (app.gritScore) { %>
                        <%
                          const gritScore = parseFloat(app.gritScore);
                          let gritColor = 'text-gray-600';
                          if (gritScore >= 4.5) gritColor = 'text-green-600';
                          else if (gritScore >= 4.0) gritColor = 'text-green-600';
                          else if (gritScore >= 3.5) gritColor = 'text-blue-600';
                          else if (gritScore >= 3.0) gritColor = 'text-gray-600';
                          else gritColor = 'text-yellow-600';
                        %>
                        <div class="text-xs sm:text-sm font-bold <%= gritColor %>"><%= gritScore.toFixed(2) %></div>
                        <div class="text-xs text-gray-500">/ 5.00</div>
                      <% } else { %>
                        <div class="text-xs sm:text-sm text-gray-400">N/A</div>
                      <% } %>
                    </td>
                    <td class="px-4 sm:px-6 py-4" data-label="Period">
                      <% if (app.applicationPeriod && app.applicationYear) { %>
                        <div class="text-xs text-gray-900"><%= app.applicationPeriod %></div>
                        <div class="text-xs text-gray-500"><%= app.applicationYear %></div>
                      <% } else { %>
                        <div class="text-xs sm:text-sm text-gray-400">N/A</div>
                      <% } %>
                    </td>
                    <td class="px-4 sm:px-6 py-4 text-xs sm:text-sm text-gray-500" data-label="Submitted">
                      <%= app.submittedAt ? new Date(app.submittedAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) : 'N/A' %>
                    </td>
                    <td class="px-4 sm:px-6 py-4" data-label="Status">
                      <%
                        let statusClass = 'bg-gray-100 text-gray-800';
                        let statusText = app.status || 'unknown';
                        if (app.status === 'pending') statusClass = 'bg-yellow-100 text-yellow-800';
                        else if (app.status === 'reviewing') statusClass = 'bg-blue-100 text-blue-800';
                        else if (app.status === 'approved') statusClass = 'bg-green-100 text-green-800';
                        else if (app.status === 'rejected') statusClass = 'bg-red-100 text-red-800';
                      %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= statusClass %> whitespace-nowrap">
                        <%= statusText %>
                      </span>
                    </td>
                    <td class="px-4 sm:px-6 py-4 text-xs sm:text-sm font-medium" data-label="Actions">
                      <div class="flex flex-wrap gap-2 justify-end">
                        <a href="/admin/applications/view/<%= app.id %>" class="text-primary hover:text-blue-900 whitespace-nowrap">View</a>
                        <button onclick="deleteApplication('<%= app.id %>')" class="text-red-600 hover:text-red-900 whitespace-nowrap">Delete</button>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </div>

  <script>
    async function deleteApplication(id) {
      if (!confirm('Are you sure you want to delete this application? This action cannot be undone.')) {
        return;
      }

      try {
        const response = await fetch(`/admin/applications/delete/${id}`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        });

        const data = await response.json();

        if (data.success) {
          window.location.reload();
        } else {
          alert('Failed to delete application');
        }
      } catch (error) {
        console.error('Error:', error);
        alert('An error occurred while deleting the application');
      }
    }
  </script>

  <%- include('../partials/admin-scripts') %>
</body>
</html>
