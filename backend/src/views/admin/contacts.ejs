<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contact Messages - PSF Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: "#117dd4"
          }
        }
      }
    };
  </script>
  <%- include('../partials/admin-styles') %>
</head>
<body class="bg-gray-50">
  <% const currentPage = 'contacts'; %>

  <%- include('../partials/admin-mobile-header') %>
  <%- include('../partials/admin-sidebar') %>

  <!-- Main Content -->
  <div class="lg:ml-64 min-h-screen pt-14 lg:pt-0">
    <!-- Top Bar -->
    <header class="bg-white border-b border-gray-200 sticky top-14 lg:top-0 z-10">
      <div class="px-4 sm:px-6 lg:px-8 py-4">
        <h2 class="text-xl sm:text-2xl font-bold text-gray-900">Contact Messages</h2>
        <p class="text-xs sm:text-sm text-gray-600 mt-1">Manage contact form submissions from visitors</p>
      </div>
    </header>

    <!-- Page Content -->
    <main class="p-4 sm:p-6 lg:p-8">
      <!-- Stats Cards -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-3 sm:gap-4 mb-6 sm:mb-8">
        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <div class="flex items-center justify-between">
            <div class="flex-1 min-w-0">
              <p class="text-xs sm:text-sm text-gray-600 truncate">Total</p>
              <p class="text-xl sm:text-2xl font-bold text-gray-900"><%= statusCounts.all %></p>
            </div>
            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0 ml-2">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <div class="flex items-center justify-between">
            <div class="flex-1 min-w-0">
              <p class="text-xs sm:text-sm text-gray-600 truncate">New</p>
              <p class="text-xl sm:text-2xl font-bold text-yellow-600"><%= statusCounts.new %></p>
            </div>
            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-yellow-100 rounded-full flex items-center justify-center flex-shrink-0 ml-2">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <div class="flex items-center justify-between">
            <div class="flex-1 min-w-0">
              <p class="text-xs sm:text-sm text-gray-600 truncate">Read</p>
              <p class="text-xl sm:text-2xl font-bold text-green-600"><%= statusCounts.read %></p>
            </div>
            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0 ml-2">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow p-4 sm:p-6">
          <div class="flex items-center justify-between">
            <div class="flex-1 min-w-0">
              <p class="text-xs sm:text-sm text-gray-600 truncate">Archived</p>
              <p class="text-xl sm:text-2xl font-bold text-gray-600"><%= statusCounts.archived %></p>
            </div>
            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-gray-100 rounded-full flex items-center justify-center flex-shrink-0 ml-2">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- Filter Tabs -->
      <div class="bg-white rounded-lg shadow mb-6">
        <div class="border-b border-gray-200">
          <nav class="flex space-x-4 sm:space-x-8 px-4 sm:px-6 overflow-x-auto" aria-label="Tabs">
            <a href="/admin/contacts?status=all" class="<%= currentStatus === 'all' ? 'border-primary text-primary' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' %> whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
              All (<%= statusCounts.all %>)
            </a>
            <a href="/admin/contacts?status=new" class="<%= currentStatus === 'new' ? 'border-primary text-primary' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' %> whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
              New (<%= statusCounts.new %>)
            </a>
            <a href="/admin/contacts?status=read" class="<%= currentStatus === 'read' ? 'border-primary text-primary' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' %> whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
              Read (<%= statusCounts.read %>)
            </a>
            <a href="/admin/contacts?status=archived" class="<%= currentStatus === 'archived' ? 'border-primary text-primary' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' %> whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
              Archived (<%= statusCounts.archived %>)
            </a>
          </nav>
        </div>
      </div>

      <!-- Contacts Table -->
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="responsive-table">
          <table class="min-w-full divide-y divide-gray-200 mobile-cards">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Name</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Email</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Message Preview</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Submitted</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Status</th>
                <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% if (contacts.length === 0) { %>
                <tr>
                  <td colspan="6" class="px-4 sm:px-6 py-12 text-center text-gray-500">
                    <svg class="mx-auto h-10 w-10 sm:h-12 sm:w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                    <p class="text-base sm:text-lg font-medium">No contact messages yet</p>
                    <p class="text-xs sm:text-sm">Messages will appear here when visitors submit the contact form</p>
                  </td>
                </tr>
              <% } else { %>
                <% contacts.forEach(contact => { %>
                  <tr class="hover:bg-gray-50 <%= contact.status === 'new' ? 'bg-yellow-50' : '' %>">
                    <td class="px-4 sm:px-6 py-4" data-label="Name">
                      <div class="flex items-center">
                        <div class="flex-shrink-0 h-8 w-8 sm:h-10 sm:w-10 bg-primary rounded-full flex items-center justify-center">
                          <span class="text-white font-medium text-xs sm:text-sm"><%= contact.name ? contact.name.charAt(0).toUpperCase() : '?' %></span>
                        </div>
                        <div class="ml-2 sm:ml-4 min-w-0">
                          <div class="text-xs sm:text-sm font-medium text-gray-900 break-words"><%= contact.name || 'N/A' %></div>
                        </div>
                      </div>
                    </td>
                    <td class="px-4 sm:px-6 py-4 text-xs sm:text-sm text-gray-900" data-label="Email">
                      <a href="mailto:<%= contact.email %>" class="text-primary hover:underline break-all"><%= contact.email %></a>
                    </td>
                    <td class="px-4 sm:px-6 py-4" data-label="Message">
                      <div class="text-xs sm:text-sm text-gray-600 truncate max-w-xs">
                        <%= contact.message ? contact.message.substring(0, 80) + (contact.message.length > 80 ? '...' : '') : 'N/A' %>
                      </div>
                    </td>
                    <td class="px-4 sm:px-6 py-4 text-xs sm:text-sm text-gray-500" data-label="Submitted">
                      <%= new Date(contact.submittedAt).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                    </td>
                    <td class="px-4 sm:px-6 py-4" data-label="Status">
                      <% if (contact.status === 'new') { %>
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">New</span>
                      <% } else if (contact.status === 'read') { %>
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Read</span>
                      <% } else if (contact.status === 'archived') { %>
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">Archived</span>
                      <% } %>
                    </td>
                    <td class="px-4 sm:px-6 py-4" data-label="Actions">
                      <div class="flex gap-2">
                        <a href="/admin/contacts/view/<%= contact.id %>" class="text-primary hover:text-blue-800 text-xs sm:text-sm font-medium">View</a>
                        <button onclick="deleteContact('<%= contact.id %>')" class="text-red-600 hover:text-red-800 text-xs sm:text-sm font-medium">Delete</button>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              <% } %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <% if (totalPages > 1) { %>
          <div class="bg-white px-4 py-3 border-t border-gray-200 sm:px-6">
            <div class="flex items-center justify-between">
              <div class="text-sm text-gray-700">
                Page <span class="font-medium"><%= currentPage %></span> of <span class="font-medium"><%= totalPages %></span>
              </div>
              <div class="flex gap-2">
                <% if (currentPage > 1) { %>
                  <a href="/admin/contacts?page=<%= currentPage - 1 %>&status=<%= currentStatus %>" class="px-3 py-2 text-sm bg-gray-200 hover:bg-gray-300 rounded">Previous</a>
                <% } %>
                <% if (currentPage < totalPages) { %>
                  <a href="/admin/contacts?page=<%= currentPage + 1 %>&status=<%= currentStatus %>" class="px-3 py-2 text-sm bg-primary hover:bg-blue-700 text-white rounded">Next</a>
                <% } %>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </main>
  </div>

  <script>
    async function deleteContact(id) {
      if (!confirm('Are you sure you want to delete this contact message? This action cannot be undone.')) {
        return;
      }

      try {
        const response = await fetch(`/admin/contacts/delete/${id}`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        });

        const data = await response.json();

        if (data.success) {
          window.location.reload();
        } else {
          alert('Error deleting contact message: ' + (data.error || 'Unknown error'));
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error deleting contact message');
      }
    }
  </script>
</body>
</html>
