<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit User - Admin Panel</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: "#117dd4"
          }
        }
      }
    };
  </script>
  <%- include('../partials/admin-styles') %>
</head>
<body class="bg-gray-50">
  <% const currentPage = 'users'; %>

  <%- include('../partials/admin-mobile-header') %>
  <%- include('../partials/admin-sidebar') %>

  <!-- Main Content -->
  <div class="lg:ml-64 min-h-screen pt-14 lg:pt-0">
    <header class="bg-white border-b border-gray-200 sticky top-14 lg:top-0 z-10">
      <div class="px-4 sm:px-6 lg:px-8 py-4 flex flex-col sm:flex-row justify-between sm:items-center gap-3">
        <div class="flex items-center gap-4">
          <a href="/admin/users" class="text-gray-600 hover:text-primary">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
          </a>
          <h2 class="text-2xl font-bold text-gray-900">Edit User</h2>
        </div>
        <button type="submit" form="user-form" class="px-6 py-2 bg-primary text-white rounded-lg font-bold hover:bg-opacity-90">
          Update User
        </button>
      </div>
    </header>

    <main class="p-4 sm:p-6 lg:p-8">
      <div class="max-w-2xl">
        <form id="user-form" action="/admin/users/edit/<%= user.id %>" method="POST">

          <!-- Name -->
          <div class="bg-white rounded-lg shadow p-6 mb-6">
            <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">Full Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              value="<%= user.name %>"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
              placeholder="John Doe"
            />
          </div>

          <!-- Email -->
          <div class="bg-white rounded-lg shadow p-6 mb-6">
            <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">Email Address</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              value="<%= user.email %>"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
              placeholder="john@example.com"
            />
          </div>

          <!-- Password (optional) -->
          <div class="bg-white rounded-lg shadow p-6 mb-6">
            <label for="password" class="block text-sm font-semibold text-gray-700 mb-2">New Password (optional)</label>
            <input
              type="password"
              id="password"
              name="password"
              minlength="6"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
              placeholder="Leave blank to keep current password"
            />
            <p class="text-xs text-gray-500 mt-2">Only fill this if you want to change the password</p>
          </div>

          <!-- Role -->
          <div class="bg-white rounded-lg shadow p-6 mb-6">
            <label for="role" class="block text-sm font-semibold text-gray-700 mb-2">Role</label>
            <select
              id="role"
              name="role"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
            >
              <option value="user" <%= user.role === 'user' ? 'selected' : '' %>>User</option>
              <option value="editor" <%= user.role === 'editor' ? 'selected' : '' %>>Editor</option>
              <option value="admin" <%= user.role === 'admin' ? 'selected' : '' %>>Admin</option>
            </select>
          </div>

          <!-- Status -->
          <div class="bg-white rounded-lg shadow p-6 mb-6">
            <label for="isActive" class="block text-sm font-semibold text-gray-700 mb-2">Account Status</label>
            <select
              id="isActive"
              name="isActive"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
            >
              <option value="true" <%= user.isActive ? 'selected' : '' %>>Active</option>
              <option value="false" <%= !user.isActive ? 'selected' : '' %>>Inactive</option>
            </select>
          </div>

          <!-- User Info -->
          <div class="bg-blue-50 rounded-lg p-4">
            <h3 class="text-sm font-semibold text-gray-700 mb-2">User Information</h3>
            <div class="text-xs text-gray-600 space-y-1">
              <p><strong>User ID:</strong> <%= user.id %></p>
              <p><strong>Created:</strong> <%= user.createdAt ? new Date(user.createdAt).toLocaleString() : 'N/A' %></p>
              <p><strong>Last Login:</strong> <%= user.lastLogin ? new Date(user.lastLogin).toLocaleString() : 'Never' %></p>
            </div>
          </div>

        </form>
      </div>
    </main>
  </div>

  <%- include('../partials/admin-scripts') %>
</body>
</html>
